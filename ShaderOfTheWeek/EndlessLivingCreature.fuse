ShaderKernelCode =
[[

// ----------------------------------------------------------------------------------
// - Image                                                                          -
// ----------------------------------------------------------------------------------


// Weird endless living creature
// inspired by Inigo Quilez live stream shader deconstruction
// Leon Denise (ponk) 2019.08.28
// Licensed under hippie love conspiracy

// Using code from
// Inigo Quilez
// Morgan McGuire



// toolbox
#define PI  3.1415f
#define repeat(p,r) (mod_f(p,r)-r/2.0f)
__DEVICE__ float random(float2 p) { return fract(1e4f * _sinf(17.0f * p.x + p.y * 0.1f) * (0.1f + _fabs(_sinf(p.y * 13.0f + p.x)))); }
__DEVICE__ mat2 rot(float a) { float c=_cosf(a),s=_sinf(a); return to_mat2(c,-s,s,c); }
__DEVICE__ float smoothmin (float a, float b, float r) { float h = clamp(0.5f+0.5f*(b-a)/r, 0.0f, 1.0f); return _mix(b, a, h)-r*h*(1.0f-h); }
__DEVICE__ float sdSphere (float3 p, float r) { return length(p)-r; }
__DEVICE__ float3 look (float3 eye, float3 target, float2 anchor, float fov) {
    float3 forward = normalize(target-eye);
    float3 right = normalize(cross(forward, to_float3(0,1,0)));
    float3 up = normalize(cross(right, forward));
    return normalize(forward * fov + right * anchor.x + up * anchor.y);
}

__DEVICE__ float geometry (float3 pos, float time, float iTime, int count, float range, float balance, float radius, float blend, float falloff) {
    float scene = 1.0f, a = 1.0f;
    float t = time * 0.5f + pos.x / 30.0f;
    t = _floor(t)+smoothstep(0.0f,0.9f,_powf(fract(t),2.0f));
    pos.x = repeat(pos.x+iTime, 5.0f);
    for (int i = count; i > 0; --i) {
        pos.x = _fabs(pos.x)-range*a;
        swi2S(pos,x,y, mul_f2_mat2(swi2(pos,x,y) , rot(_cosf(t)*balance/a+a*2.0f)));
        swi2S(pos,z,y, mul_f2_mat2(swi2(pos,z,y) , rot(_sinf(t)*balance/a+a*2.0f)));
        scene = smoothmin(scene, sdSphere(pos,(radius*a)), blend*a);
        a /= falloff;
    }
    return scene;
}

__DEVICE__ float raymarch ( float3 eye, float3 ray, float time, out float *total, float iTime, int count, float range, float balance, float radius, float blend, float falloff ) {
    float dither = random(swi2(ray,x,y)+fract(time));
    *total = 0.0f;
    const int _count = 20;
    for (int index = _count; index > 0; --index) {
        float dist = geometry(eye+ *total*ray,time, iTime, count, range, balance, radius, blend, falloff);
        dist *= 0.9f+0.1f*dither;
        *total += dist;
        if (dist < 0.001f * *total) {
            return (float)(index)/(float)(_count);
        }
    }
    return 0.0f;
}

__DEVICE__ float3 camera (float3 eye, float4 iMouse, float2 iResolution) {
    float2 mouse = swi2(iMouse,x,y)/iResolution*2.0f-1.0f;
    if (iMouse.z > 0.5f) {
        swi2S(eye,y,z, mul_f2_mat2(swi2(eye,y,z) , rot(mouse.y*PI)));
        swi2S(eye,x,z, mul_f2_mat2(swi2(eye,x,z) , rot(mouse.x*PI)));
    }
    return eye;
}

__KERNEL__ void EndlessLivingCreatureFuse(__CONSTANTREF__ Params*  params, __TEXTURE2D_WRITE__ destinationTexture)
{
   DEFINE_KERNEL_ITERATORS_XY(fusion_x, fusion_y);

   if (fusion_x >= params->width || fusion_y >= params->height)
     return;

  float2 iResolution = to_float2(params->iResolution[0], params->iResolution[1]);
  float  iTime       = params->iTime;
  float4 iMouse      = to_float4(params->iMouse[0],params->iMouse[1],params->iMouse[2],params->iMouse[3]);
  float4 fragColor   = to_float4_s(0.0f);
  float2 fragCoord   = to_float2(fusion_x,fusion_y);


  bool   Reset = params->Reset;
  float4 ColorOut = to_float4(params->ColorOut[0], params->ColorOut[1], params->ColorOut[2], params->ColorOut[3]);
  float4 Color1 = to_float4(params->Color1[0], params->Color1[1], params->Color1[2], params->Color1[3]);
  float4 Color2 = to_float4(params->Color2[0], params->Color2[1], params->Color2[2], params->Color2[3]);
  float2 ViewDXY = to_float2(params->ViewDXY[0], params->ViewDXY[1]);
  float  ViewDZ = params->ViewDZ;
  float2 ViewXY = to_float2(params->ViewXY[0], params->ViewXY[1]);
  float  ViewZ = params->ViewZ;
  int    count = params->count;
  float  speed = params->speed;
  float  balance = params->balance;
  float  range = params->range;
  float  radius = params->radius;
  float  blend = params->blend;
  float  falloff = params->falloff;
  float  motion_frames = params->motion_frames;

  // --------
    // tweak zone
    //int count = 15;
    //float speed   = 1.0f;
    //float balance = 1.5f;
    //float range   = 1.4f;
    //float radius  = 0.6f;
    //float blend   = 0.3f;
    //float falloff = 1.2f;

    // increment it at your own GPU risk
    //const float motion_frames = 1.0f;


    float2 uv = 2.0f*(fragCoord-0.5f*iResolution)/iResolution.y;
    float3 eye = camera(to_float3(0,0,4), iMouse, iResolution) + to_float3_aw(ViewXY, ViewZ);
    float3 ray = look(eye, to_float3_s(0), uv, 1.0f) + to_float3_aw(ViewDXY, ViewDZ);
    float total = 0.0f;
    fragColor = to_float4_s(0);
    for (float index = motion_frames; index > 0.0f; --index) {
        float dither = random(swi2(ray,x,y)+fract(iTime+index));
        float time = iTime*speed+(dither+index)/10.0f/motion_frames;
        fragColor += to_float4_s(raymarch(eye, ray, time, &total, iTime, count, range, balance, radius, blend, falloff))/motion_frames;
    }

    // extra color
    swi3S(fragColor,x,y,z, swi3(fragColor,x,y,z) * swi3(Color1,x,y,z));//to_float3(0.7f,0.8f,0.9f));
    float d = smoothstep(7.0f,0.0f,total);
    swi3S(fragColor,x,y,z, swi3(fragColor,x,y,z) + swi3(Color2,x,y,z) *d);//to_float3(0.8f,0.6f,0.5f) * d);

    fragColor = to_float4_aw(swi3(fragColor,x,y,z) * (swi3(ColorOut,x,y,z) + 0.5f), ColorOut.w == 0.0 ? fragColor.w : ColorOut.w);

  _tex2DVec4Write(destinationTexture, fusion_x, fusion_y, fragColor);
}
]]
