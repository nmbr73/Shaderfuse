                          mod_f(pos.z+0.25f, 0.5f)-0.25f );
    float2 id = _floor((swixz(pos)+0.25f)/0.5f);
    float2 fid = to_float2( id.x*21.1f + id.y*11.7f,
                            id.x*13.1f + id.y*51.7f );
    float2 dis = cos_f2(fid);
    float3 ofs = to_float3( dis.x*0.1f,
                            -0.25f+0.3f*fract_f(fid.x),
                            dis.y*0.1f);
    float3 group = to_float3( 0.0f,
                             -0.05f*(1.0f - _cosf(pos.x)*_cosf(pos.x)),
                             0.0f );
    float d = sdSphere( q - ofs - group, 0.1f );
    float co = 0.5f+0.5f*clamp( (pos.y-fh)/0.03f, 0.0f,1.0f );

    res = (d<res.x) ? to_float4(d,5.0f,co,0.0f) : res;
    }
#endif

    return res;
}

__DEVICE__ float4 map( float3 pos, float atime )
{
    float t = fract_f(atime);
    float y = 4.0f*t*(1.0f - t);
    float dy = 4.0f*(1.0f - 2.0f*t);
    // delayed parabolas
    float t2 = fract_f(atime - 0.2f);
    float y2 = 4.0f*t2*(1.0f - t2);
    float t3 = fract_f(atime + 0.15f);
    float y3 = 4.0f*t3*(1.0f - t3);

    float2 uu = normalize(to_float2(1.0f,-dy));
    float2 vv = to_float2(-uu.y, uu.x);

    float itime = _floor(atime);
    float ftime = fract_f(atime);

    // position
    float x = -1.0f+2.0f*_fabs(fract_f(0.5f*atime) - 0.5f)/0.5f;
    float3 cen = to_float3( 0.6f * _sinf(atime),
                          //0.8f*_powf(_powf(y,2.0f-y), 0.4f)+0.15f, // temp
                            0.7f + 0.3f * _sinf(atime),
                            itime+_powf(ftime,0.7f) );
    float sy = 0.7f + 0.3f*y;
    float sz = 1.0f/sy;

    // ref coords
    float3 q = pos - cen;

    float ro = 0.3f*x;
    float cc = _cosf(ro);
    float ss = _sinf(ro);
    float2 qxy = mat2_multi_f2(make_mat2(cc,-ss,ss,cc),swixy(q));
	q.x=qxy.x;q.y=qxy.y;


    // Swap the character and the terrain
    float ttime = mod_f(atime+2.0f, 10.0f);
    float ctime = mod_f(atime+1.0f, 10.0f);
    float tx = 0.0f;
    const float ts = 20.0f;
    if( ttime < 2.0f ) tx = ts*(ttime - 1.0f);
    else if( ttime < 5.0f ) tx = ts;
    else if( ttime < 7.0f ) tx = -ts*((ttime - 5.0f) - 1.0f);
    else tx = -ts;


    float4 res, res2;

    if( ctime<5.0f ) {
        res = char_happy( q, atime, sy, sz, cc, ss, y, y2, y3 );
    } else {
        res = char_evil( q, atime, sy, sz, cc, ss, y, y2, y3 );
    }
    if( pos.x < tx) {
        res2 = terrain_happy( pos, atime, cen );
    } else {
        res2 = terrain_evil( pos, atime, cen );
    }
    res = (res2.x < res.x) ? res2 : res;

    return res;
}

__DEVICE__ float3 calcNormal( float3 pos, float atime )
{
    float2 e = to_float2(0.0001f,0.0f);
    return normalize( to_float3( map(pos+swixyy(e),atime).x-map(pos-swixyy(e),atime).x,
                                 map(pos+swiyxy(e),atime).x-map(pos-swiyxy(e),atime).x,
                                 map(pos+swiyyx(e),atime).x-map(pos-swiyyx(e),atime).x ) );
}

__DEVICE__ float calcOcclusion( float3 pos, float3 nor, float atime )
{
    float occ = 0.0f;
    float sca = 1.0f;
    for( int i=0; i<5; ++i )
    {
        float h = 0.01f + 0.11f*(float)(i)/4.0f;
        float3 opos = pos + h*nor;
        float d = map( opos, atime ).x;
        occ += (h-d)*sca;
        sca *= 0.95f;
    }
    return clamp( (1.0f - 2.0f*occ), 0.0f,1.0f );
}

__DEVICE__ float castShadow( float3 ro, float3 rd, float atime )
{
    float res = 1.0f;
    // Start a bit out to prevent self-shadowing "onion rings" due
    // to noneuclidean distances (this is a hacky solution, and it
    // will prevent any real small self-shadowing that we want, that
    // we were getting at t=0.01f)
    float t = 0.05f;
    for( int i=0; i<100; ++i )
    {
        float3 pos = ro + t*rd;
        float h = map( pos,atime ).x;
        // Divide by t to get cone tracing.
        // A smaller constant factor gives softer shadows.
        res = _fminf( res, 16.0f*h/t );
        if( h<0.0001f ) break;
        t += h * 0.5f; // Step shadows slower to reduce banding.
        if( t>20.0f ) break;
    }

    return clamp( res, 0.0f,1.0f );
}

__DEVICE__ float4 castRay( float3 ro, float3 rd, float atime )
{
    float3 m = to_float3(-1.0f,1.0f,0.0f);
    float t = 0.01f;
    for( int i=0; i<512; ++i )
    {
        float3 pos = ro + t*rd;
        float4 h = map( pos,atime );
        m = swiyzw(h);
        if( _fabs(h.x)<(0.001f*t) ) break;
        t += h.x;
        if( t>20.0f ) break;
    }
    if( t>20.0f ) m = to_float3(-1.0f,1.0f,0.0f);
    return to_float4(t,m.x,m.y,m.z);
}

__DEVICE__ float3 sky_evil(float3 rd, float atime)
{
    // sky (the default colour)
    float3 col = to_float3(0.35f,0.2f,0.1f) - 0.7f*rd.y; // sky base
    col = clamp( col, 0.0f,1.0f );

#if SKY_DETAIL
    // clouds
    float2 uv = swixz(rd)/rd.y; // How is this derived??
    float2 uv0 = uv + atime*to_float2(0.1f, -0.08f);
    float2 uv1 = uv + atime*to_float2(0.2f, -0.10f);
    float cl = 0.6f*( _sinf(1.0f*uv0.x) + _sinf(1.0f*uv0.y) )
             + 0.3f*( _sinf(2.0f*uv1.x) + _sinf(2.0f*uv1.y) );
    col = _mix( col, to_float3(1.0f,0.5f,0.5f) * 0.0002f,
               smoothstep( -0.4f,0.4f, -0.5f+cl ) );

    // horizon glow/fog
    col = _mix( col, to_float3(0.95f,0.7f,0.5f), _expf(-10.0f*rd.y) );
#endif
    return col;
}

__DEVICE__ float3 sky_happy(float3 rd, float atime)
{
    // sky (the default colour)
    float3 col = to_float3(0.4f,0.75f,1.0f) - 0.7f*rd.y; // sky base
    col = clamp( col, 0.0f,1.0f );

#if SKY_DETAIL
    // clouds
    float2 uv = swixz(rd)/rd.y; // How is this derived??
    float2 uv0 = uv + atime*to_float2(0.1f, -0.08f);
    float2 uv1 = uv + atime*to_float2(0.2f, -0.10f);
    float cl = 0.6f*( _sinf(1.0f*uv0.x) + _sinf(1.0f*uv0.y) )
             + 0.3f*( _sinf(2.0f*uv1.x) + _sinf(2.0f*uv1.y) );
    col = _mix( col, to_float3(0.3f,0.7f,0.95f),
               smoothstep( -0.15f,0.15f, -0.5f+cl ) );

    // horizon glow/fog
    col = _mix( col, to_float3(0.5f,0.7f,0.9f), _expf(-10.0f*rd.y) );
#endif
    return col;
}

__DEVICE__ float3 sky(float3 rd, float atime)
{
    // Swap the character and the terrain
    float ttime = mod_f(atime+1.5f, 10.0f);
    float tx = 0.0f;
    if( ttime < 1.0f ) tx = 1.0f-ttime;
    else if( ttime < 5.0f ) tx = 0.0f;
    else if( ttime < 6.0f ) tx = (ttime - 5.0f);
    else tx = 1.0f;

    float3 sky1 = sky_happy(rd, atime);
    float3 sky2 = sky_evil(rd, atime);
    return _mix(sky1, sky2, tx);
}


__DEVICE__ float2 spin(float2 uv, float2 center, float angle, float aspect)
{
  float C = _cosf(angle);
  float S = _sinf(angle);

  uv -= center;
  float x = uv.x;
  uv.x = (x*aspect * C - uv.y * S);
  uv.y = (x*aspect * S + uv.y * C);
  uv += center;

return uv;
}

//############################################################################################################################
__KERNEL__ void HeavenAndHellKernel(__CONSTANTREF__ HeavenAndHellParams *params, __TEXTURE2D__ iChannel0, __TEXTURE2D__ iChannel1, __TEXTURE2D_WRITE__ dst)
{
  DEFINE_KERNEL_ITERATORS_XY(x, y);
  //---------------------------------------
  if (x < params->width && y < params->height)
  {

     //-----------------------
     float2 fragCoord = to_float2(x, y);
     float2 iResolution = to_float2(params->width, params->height);
     float ratio = (float)params->width/(float)params->height;
     float itime=params->itime * params->freq;
	 float4 fragColor = to_float4_s(0.0f);
     //-----------------------

    //Functionality.......

    float2 p = (2.0f*fragCoord - iResolution) / iResolution.y;

    p -=  to_float2( (params->center[0]-0.5f)*2.0f*ratio, (params->center[1]-0.5f)*2.0f); //*ratio*2.0f
    p *= params->scale;
    float2 pivot = to_float2(((params->pivot[0]-0.5f)*2.0f*ratio),(params->pivot[1]-0.5f)*2.0f); //*ratio
    p = spin(p, pivot, params->angle, 1.0f); //params->debug


    // time
    float atime = mod_f(itime, 60.0f);
//    atime = 134.7f; // paused sunlight
//    atime = 4.0f; // paused shadow
//    atime = 40.8f; // paused 3/4 view
//    atime = 110.25f; // paused looking almost at camera
//    atime = 20.13f; // paused half shadow
    // character pos
    float t = fract_f(atime-0.1f);
    float _y = 4.0f*t*(1.0f - t); // from character y, slightly advanced

    // camera angle
    float an = -0.2f+0.4f*_sinf(0.15f*atime);
          an = 10.0f*(params->look[2]); // mouse control

    // camera distance
    float cd = 2.5f-0.9f*_sinf(0.1f*atime)*_sinf(0.1f*atime);
    // camera offset
    float3 co = to_float3(cd*_sinf(an),1.0f,cd*_cosf(an)); // temp
    // target
    float3 ta = to_float3(0.0f,0.7f+0.0f*0.2f*_y,atime); // temp

    // float above floor
    float3 ro = ta + co;
    float fh = -0.1f + 0.05f*(_sinf(2.0f*ro.x)+_sinf(2.0f*ro.z)); // from terrain
    ro.y = fh + 0.22f + 0.5f*_sinf(0.2f*atime)*_sinf(0.2f*atime);

    // camera shake when bouncing
    // temp
//    float bt = -1.0f+2.0f*_fabs(fract_f(atime-0.1f) - 0.5f)/0.5f;
//    float bou = 0.8f*smoothstep(0.2f,1.0f,bt);
//    ro += bou*to_float3(0.05f,-0.12f,0.05f)*_sinf(atime*12.0f + to_float3(2.0f,2.0f,4.0f));

    float3 ww = normalize( ta - ro );
    float3 uu = normalize( cross(ww, to_float3(0,1,0)) );
    float3 vv = normalize( cross(uu,ww) );

    float3 rd = normalize( p.x*uu + p.y*vv + 1.8f*ww );

    float3 col = sky(rd, atime);

    float4 tm = castRay( ro, rd, atime );

    if( tm.y>0.0f )
    {
        float t = tm.x;
        float3 pos = ro + t*rd;
        float3 nor = calcNormal( pos, atime );

        // albedo
        float3 al = to_float3_s(0.18f);
        // specular
        float ks = 1.0f;

        // happy materials
        if( tm.y<1.5f )
        {
            // terrain
            al = to_float3(0.05f,0.1f,0.02f);

			if (params->tex[0]) //Terrainfärbung mit Textur
			{
				float2 tuv = fragCoord/iResolution;
				float3 tex = swixyz(_tex2DVecN(iChannel0, pos.x,pos.y,15));
				al=tex;
			}
			//else
			{
				float f = -1.0f+2.0f*smoothstep( -0.2f,0.2f, _sinf(18.0f*pos.x)+_sinf(18.0f*pos.y)+_sinf(18.0f*pos.z) );
				al += 0.2f*f*to_float3(0.06f,0.06f,0.02f);
			}
            // get darker and redder as it grows higher
            al = _mix( al, to_float3(0.005f, 0.0005f, 0.0f), 0.3f*pos.y );
            // specular is only high near ground level
            ks = clamp( 2.0f - 1.5f*pos.y, 0.0f,3.0f );
        }
        else if( tm.y<2.5f || (tm.y >= 7.5f && tm.y < 8.5f) )
        {
            // body
            //al = to_float3(0.02f,0.1f,0.3f); // Original
            al = to_float3(0.4f, 0.1f, 0.2f); // pants
            ks = 0.5f;

            // polka dot pattern
            float f = -1.0f+2.0f*smoothstep( -2.0f,2.0f, _sinf(30.0f*pos.x*0.1f)+_sinf(30.0f*pos.y*0.1f)+_sinf(30.0f*pos.z*0.5f) );
            al = _mix(al, to_float3(0.4f, 0.1f, 0.2f), 1.0f - f);
        }
        else if( tm.y<3.5f )
        {
            // eyes
            al = to_float3(0.4f,0.4f,0.4f);
            ks = 2.0f;
        }
        else if( tm.y<4.5f )
        {
            // pupils
            al = to_float3_s(0.02f);
            ks = 10.0f;
        }
        else if( tm.y<5.5f )
        {
            // candy
            al = to_float3(0.1f, 0.02f, 0.01f);
            float2 id = _floor((swixz(pos)+0.25f)/0.5f);
            float fid = id.x*11.1f + id.y*31.7f;
            al += to_float3(0.01f,0.06f,0.02f)*cos_f3( fid*10.0f + to_float3(0.0f, 0.2f, 0.4f) );
            ks = 1.0f;
        }
        else if( tm.y<6.5f )
        {
            // pants
            al = to_float3(0.4f, 0.1f, 0.2f);
            ks = 3.0f;
        }
        else if( tm.y<7.5f )
        {
            // horn
            float hue = fract_f(atime * 3.0f) * 6.28f;
            al = hsl2rgb(to_float3(hue, 0.9f, 0.4f));
            ks = 10.0f;
        }
        else if( tm.y<9.5f )
        {
            // wings
            al = to_float3(0.4f, 0.1f, 0.2f);
            ks = 5.0f;
            // polka dot pattern
            float f = -1.0f+2.0f*smoothstep( -0.2f,0.2f, _sinf(80.0f*pos.x)+_sinf(80.0f*pos.y)+_sinf(2.0f) );
            al += 0.2f*f*to_float3(0.06f,0.06f,0.02f);
        }
        else if( tm.y<10.5f )
        {
            // everything else
            al = to_float3(0.0f,0.0f,0.0f);
            ks = 0.0f;
        }
        // evil materials
        else if( tm.y<11.5f )
        {
            // terrain
            al = to_float3(0.4f,0.03f,0.01f);

            if (params->tex[1]) //Terrainfärbung mit Textur
			{
				float2 tuv = fragCoord/iResolution;
				float3 tex = swixyz(_tex2DVecN(iChannel1, pos.x,pos.y,15));
				al=tex;
			}
			else
			{
				float f = -1.0f+2.0f*smoothstep( -0.2f,0.2f, _sinf(18.0f*pos.x)+_sinf(18.0f*pos.y)+_sinf(18.0f*pos.z) );
				al += 0.2f*f*to_float3(0.06f,0.06f,0.02f);
				// get darker and redder as it grows higher
				al = _mix( al, to_float3(0.007f, 0.0003f, 0.0f), 0.15f*(pos.y + 6.0f) );
			}
            // specular is only high near ground level
            ks = clamp( 2.0f - 1.5f*pos.y, 0.0f,3.0f );
        }
        else if( tm.y<12.5f || (tm.y >= 17.5f && tm.y < 18.5f) )
        {
            // body
            //al = to_float3(0.02f,0.1f,0.3f);//Original
			al = to_float3(0.4f, 0.1f, 0.2f); //Pants
            ks = 0.5f;

            // polka dot pattern
            float f = -1.0f+2.0f*smoothstep( -2.0f,2.0f, _sinf(30.0f*pos.x*0.1f)+_sinf(30.0f*pos.y*0.1f)+_sinf(30.0f*pos.z*0.5f) );
            al = _mix(al, to_float3(0.4f, 0.1f, 0.2f), 1.0f - f);
        }
        else if( tm.y<13.5f )
        {
            // eyes
            al = to_float3(0.6f,0.0f,0.0f);
            ks = 2.0f;
        }
        else if( tm.y<14.5f )
        {
            // pupils
            al = to_float3_s(0.02f);
            ks = 10.0f;
        }
        else if( tm.y<15.5f )
        {
            // candy
            al = to_float3(0.1f, 0.1f, 0.1f);
            float2 id = _floor((swixz(pos)+0.25f)/0.5f);
            float fid = id.x*11.1f + id.y*31.7f;
            al += to_float3(0.01f,0.06f,0.02f)*cos_f3( fid*10.0f + to_float3(0.0f, 0.2f, 0.4f) );
            ks = 1.0f;
        }
        else if( tm.y<16.5f )
        {
            // pants
            al = to_float3(0.4f, 0.1f, 0.2f);
            ks = 3.0f;
        }
        else if( tm.y<17.5f )
        {
            // horn
            float hue = fract_f(atime * 0.1f) * 6.28f;
            al = hsl2rgb(to_float3(hue, 0.9f, 0.4f));
            ks = 10.0f;
        }
        else if( tm.y<19.5f )
        {
            // wings
            al = to_float3(0.0f, 0.0f, 0.0f);
            ks = 0.3f;
            // polka dot pattern
            float f = -1.0f+2.0f*smoothstep( -0.2f,0.2f, _sinf(80.0f*pos.x)+_sinf(80.0f*pos.y)+_sinf(2.0f) );
            //al += 0.2f*f*to_float3(0.06f,0.06f,0.02f);
        }
        else if( tm.y<20.5f )
        {
            // eyes
            al = to_float3(0.5f,0.5f,0.1f);
            ks = 3.0f;
        }
        else
        {
            // everything else
            al = to_float3(0.0f,0.0f,0.0f);
            ks = 0.0f;
        }
        al = clamp( al, to_float3_s(0.0f), to_float3_s(1.0f) );

        float occ = calcOcclusion( pos, nor, atime )*tm.z;
        float3 sun_dir = normalize( to_float3(0.8f,0.4f,0.7f) );
        float sun_dif = clamp( dot(nor,sun_dir), 0.0f,1.0f );
        // push specular out of place a little
        float3 sun_hal = normalize(sun_dir - rd + to_float3(0.0f, 0.25f, -0.5f));
        float sun_sha = castShadow( pos + nor*0.001f, sun_dir, atime );
        float3 sun_sha_pen = to_float3(sun_sha,
                                 _mix( sun_sha, sun_sha*sun_sha, 0.5f ),
                                       sun_sha*sun_sha); // for orangey penumbras.
        float sun_spe = ks*_powf( clamp(dot(nor,sun_hal),0.0f,1.0f), 8.0f )*sun_dif
                          *(0.04f+0.96f*_powf(clamp(1.0f+dot(sun_hal,rd),0.0f,1.0f),5.0f));
        float sky_dif = clamp( 0.5f + 0.5f*dot(nor,to_float3(0.0f,1.0f,0.0f)), 0.0f,1.0f );
        float sky_ref = smoothstep( 0.0f,1.5f/ks, reflect(rd,nor).y );
        float bou_dif = clamp( 0.01f + 0.99f*dot(nor,to_float3(0.0f,-1.0f,0.0f)), 0.0f,1.0f );
        float fre = clamp( 1.0f + dot(rd,nor), 0.0f,1.0f );

        // Check if the guy is generally shadow (so we can reduce
        // sss when he is. And only apply this to the guy's body, not
        // the whole scene!
        // (Previously it was being applied when he looked down :D
        // and it made the whole terrain flicker when applied D: )
        float guy_sha = 1.0f;
        if (tm.y > 1.5f && tm.y <= 2.5f) {
		float itime = _floor(atime);
		float ftime = fract_f(atime);
		float y = 4.0f*ftime*(1.0f - ftime);
		float x = -1.0f+2.0f*_fabs(fract_f(0.5f*atime) - 0.5f)/0.5f;
		float3 cen = to_float3( x*0.4f,
					 _powf(y,2.0f-y)+0.15f,
					 itime+_powf(ftime,0.7f) );
		// offset the body raycast by a bunch to prevent it intersecting
		// the body/head. We only want to consider environment shadows!
		guy_sha = castShadow( cen+0.8f*sun_dir, sun_dir, atime );
        }

        // diffuse (sun, sky, bounce)
        float3 lin = to_float3_s(0.0f);
        lin += sun_dif*to_float3(9.1f,6.0f,2.2f)*sun_sha_pen;
        lin += 1.5f*sky_dif*to_float3(0.5f,0.8f,3.9f)*occ;
        lin += 0.75f*bou_dif*to_float3(0.3f,1.08f,0.2f)*occ;
        // fake sss
        lin += 2.0f*fre*to_float3(1.5f,0.5f,0.4f)
                  *(0.5f+0.5f*sun_dif) // reduce a little unlit areas.
                  *(0.15f+0.85f*guy_sha) // reduce a lot when guy shadow.
                  *(0.5f+0.5f*tm.z); // reduce a ton when forced-occlusion places.
        col = al*lin;

        // specular
        col += sun_spe*to_float3(8.10f,6.00f,4.20f)*sun_sha;
        col += sky_ref*0.1f*to_float3(0.6f,0.9f,2.0f)*sky_dif*occ;

        // haze
        col = _mix( col, to_float3(0.95f,0.7f,0.5f), 1.0f-_expf(-0.00005f*t*t*t) );

#if COLOR_GRADING
        // Inigo hack: boost reds the lighting colours.
        // Like a curves adjustment. Artistic more than realistic.
        col = pow_f3( col, to_float3(0.8f,0.9f,1.0f) );
#endif

//        col = to_float3(tm.z*tm.z);
//        col = to_float3(occ*occ);
//        col = to_float3( guy_sha );
        }

    // Convert to gamma space.
    col = pow_f3( col, to_float3_s(0.4545f) );

#if COLOR_GRADING
    // Exposure and contrast adjustment:
    // (Normally would do this linear space, but this s-curve is only
    // good between 0 and 1.0f)
    col = clamp( 1.05f*col, 0.0f,1.0f ); // 5% exposure gain & clamp to prevent burn.
    float3 contrasty = col*col*(3.0f - 2.0f*col); // shallow s-curve.
    col = _mix( col, contrasty, 0.25f ); // Just use a bit of the contrasty colours.
#endif

    fragColor = to_float4_aw(col,1.0f);

    _tex2DVec4Write(dst, x, y, fragColor);
  }
}
