    float hp = -1.0f+2.0f*smoothstep( -0.4f,0.4f, 0.1f+0.15f*_cosf(atime * 3.3f) );
//    hr = -5.0f*(iMouse.x/iResolution.x - 0.5f); // mouse control
//    hp = 2.0f*(iMouse.y/iResolution.y - 0.5f); // mouse control
    cc = _cosf(hr);
    ss = _sinf(hr);
    float2 hxz = mat2_multi_f2(make_mat2(cc,-ss,ss,cc),swixz(h));
	h.x=hxz.x;h.z=hxz.y;

    cc = _cosf(hp);
    ss = _sinf(hp);
    float2 hyz = mat2_multi_f2(make_mat2(cc,-ss,ss,cc),swiyz(h));
	h.y=hyz.x;h.z=hyz.y;

    float3 sh = to_float3( _fabs(h.x), h.y,h.z );

    // pants (using head coordinates so they angle when the head does)
    if (h.y < 0.0f) { res.y = 6.0f; }

    // head
    {

    float d2 = sdEllipsoid(h - to_float3(0.0f,0.28f,0.0f), to_float3(0.15f,0.2f,0.23f));
    float d3 = sdEllipsoid(h - to_float3(0.0f,0.28f,-0.05f), to_float3(0.23f,0.2f,0.2f));

    d2 = s_fminf(d2,d3, 0.05f);
    d = s_fminf(res.x,d2, 0.15f);
    if( d<res.x ) res = to_float4(d, 2.0f,1.0f,0.0f);
    }

    // eyebrows
    {
    float3 eb = sh - to_float3(0.12f,0.36f-0.03f*y,0.13f);
    float er = 0.5f;
    cc = _cosf(er);
    ss = _sinf(er);
    float2 ebxy = mat2_multi_f2(make_mat2(cc,ss,-ss,cc),swixy(eb));
	eb.x=ebxy.x;eb.y=ebxy.y;

    float d2 = sdEllipsoid(eb, to_float3(0.06f,0.035f,0.05f));
    d = s_fminf(d,d2, 0.04f);
    if( d<res.x ) res = to_float4(d, 2.0f,1.0f,0.0f);
    }

    // wrinkles
    {
    float ry = (h.y-0.03f) - 1.3f*h.x*h.x;
    d += 0.001f*_sinf(ry*160.0f) * (1.0f - smoothstep(0.0f,0.05f,_fabs(ry)));
    if( d<res.x ) res = to_float4(d, 2.0f,1.0f,0.0f);
    }

    // arms
    {
    float d2 = sdStick( sh + neck,
                  to_float3(0.20f,0.25f,0.1f+-0.05f),
                  to_float3(0.3f+0.1f*y3,-0.1f+0.4f*y3,0.1f+0.05f),
                  0.03f,
                  0.06f );
    d = s_fminf(d,d2,0.02f);
    if( d<res.x ) res = to_float4(d, 2.0f,1.0f,0.0f);
    }

    // ears
    {
    float d2 = sdStick( sh,
                  to_float3(0.1f,0.4f,-0.01f),
                  to_float3(0.2f,0.4f+0.15f*y2,0.02f-0.1f*y2),
                  0.01f,
                  0.03f );
    d = s_fminf(d,d2,0.04f);
    if( d<res.x ) res = to_float4(d, 2.0f,1.0f,0.0f);
    }

    // unicorn horn
    {
    float ro = 0.7f;
    float cc = _cosf(ro);
    float ss = _sinf(ro);
    float3 hh = (h - to_float3(0.0f, 0.4f, 0.1f));
    float2 hhyz = mat2_multi_f2(make_mat2(cc,-ss,ss,cc),swiyz(hh));
	hh.y=hhyz.x;hh.z=hhyz.y;

    float d = sdStick(hh,
        to_float3(0.0f, 0.0f, 0.0f),
        to_float3(0.0f, 0.3f, 0.0f),
        0.05f,
        0.01f);
    if( d<res.x ) res = to_float4(d, 7.0f,1.0f,0.0f);
    }

    // mouth
    {
    float d = sdEllipsoid(h - to_float3(0.0f,0.15f + 5.0f*h.x*h.x,0.15f), to_float3(0.1f,0.04f,0.2f));
    float occ = 1.0f-smoothstep( -0.01f,0.001f, -d );
    d = s_fmaxf(res.x,-d,0.04f);
    if( d>res.x ) res = to_float4(d, 2.0f,occ,0.0f);
    }

    // tooth
    {
    float d = sdRoundBox( h - to_float3(0.0f,0.19f,0.16f), to_float3(0.02f,0.011f,0.01f), 0.005f );
//    float d = sdRoundBox( sh - to_float3(0.018f,0.19f,0.16f), to_float3(0.01f,0.011f,0.01f), 0.005f );
    if( d<res.x ) res = to_float4(d,3.0f,1.0f,0.0f);
    }

    // eye
    {
    // Eye rotation
    float3 e = h - to_float3(0.08f,0.28f,0.16f);

    // Maybe there's a way to get the eyes to repeat without
    // symmetry, but if so I don't know what it would be.
    // The "limited repetition" example's opRepLim works,
    // but I don't know how to do get two eyes with it instead
    // of three:
    //
    //    float rep_s = 0.16f;
    //    float3 rep_lim = to_float3(1.0f, 0.0f, 0.0f);
    //    float3 e_rep = e - rep_s*clamp( _round(e/rep_s), -rep_lim,rep_lim );
    //    e = e_rep;
    //
    // So I'm just going to do each eye separately with its own coordinate
    // basis instead*:
    //
    // (*also lets me rotate the eyes differently, which is better swiyw(a)ay!)

    float3 e0 = e;
    float3 e1 = e - to_float3(-0.16f, 0.0f, 0.0f);

    // Horizontal eye movement beyond -0.7f0.0.0f0.7 looks weird.
    // Vertical eye movement beyond -0.5f0.0.0f0.8 looks weird.
    // But we don't use the full range here, because we're also
    // tilting the head.
    const float es = 0.05f; // eye smoothing
    float etime = atime + 0.1f; // eyes lead the head movement by a moment.
    float er = -0.5f*(-1.0f + 2.0f*smoothstep( -es, es, _sinf(etime * 1.7f) ));
    float ep = 0.1f + 0.45f*(-1.0f + 2.0f*smoothstep( -es, es, _cosf(etime * 3.3f) ));
//    er = clamp( -5.0f*(iMouse.x/iResolution.x - 0.5f), -0.7f,0.7f ); // mouse control
//    ep = clamp(  2.0f*(iMouse.y/iResolution.y - 0.5f), -0.5f,0.8f ); // mouse control

    // BUG: eyes ought to look at something world coordinates,
    // and remain stable even when the head and body move. But
    // that's hard... I'm not set up to do the inverse transforms :(

    // The eyes rotate less when moving towards the nose.
    float er0 = (er < 0.0f ? er : 0.4f * er);
    float cc0 = _cosf(er0);
    float ss0 = _sinf(er0);
    float2 e0xz = mat2_multi_f2(make_mat2(cc0,-ss0,ss0,cc0),swixz(e0));
	e0.x=e0xz.x;e0.z=e0xz.y;

    float er1 = (er > 0.0f ? er : 0.4f * er);
    float cc1 = _cosf(er1);
    float ss1 = _sinf(er1);
    float2 e1xz = mat2_multi_f2(make_mat2(cc1,-ss1,ss1,cc1),swixz(e1));
	e1.x=e1xz.x;e1.z=e1xz.y;

    // But both eyes pitch identically.
    cc = _cosf(ep);
    ss = _sinf(ep);
    float2 e0yz = mat2_multi_f2(make_mat2(cc,-ss,ss,cc),swiyz(e0));
	e0.y=e0yz.x;e0.z=e0yz.y;

    float2 e1yz = mat2_multi_f2(make_mat2(cc,-ss,ss,cc),swiyz(e1));
	e1.y=e1yz.x;e1.z=e1yz.y;

    // Eye occlusion
    float eo = 1.0f-5.0f*smoothstep( 0.06f,0.4f, sh.x );

    // Left eye (e0)
    d = sdSphere( e0, 0.05f );
    if( d<res.x ) res = to_float4(d,3.0f,eo,0.0f);
    // pupil
    d = sdSphere( e0 - to_float3(0.00f,0.00f,0.04f), 0.02f );
    if( d<res.x ) res = to_float4(d,4.0f,1.0f,0.0f);

    // Right eye (e1)
    d = sdSphere( e1, 0.05f );
    if( d<res.x ) res = to_float4(d,3.0f,eo,0.0f);
    // pupil
    d = sdSphere( e1 - to_float3(0.00f,0.00f,0.04f), 0.02f );
    if( d<res.x ) res = to_float4(d,4.0f,1.0f,0.0f);
    }

    // --- wings ---

    {
    float ws = 24.0f;
    float3 wo = _mix(sb, sh, 0.8f) - to_float3(0.0f,0.1f,-0.16f);

    float wf = 0.5f + 0.6f * _sinf(ws * atime);
    float cc = _cosf(wf);
    float ss = _sinf(wf);
    float2 woyz = mat2_multi_f2(make_mat2(cc,ss,-ss,cc) , swiyz(wo));
	wo.y=woyz.x;wo.z=woyz.y;

    float wr = -0.8f + 0.1f * _sinf(ws * atime);
    cc = _cosf(wr);
    ss = _sinf(wr);
    float2 woxy = mat2_multi_f2(make_mat2(cc,ss,-ss,cc) , swixy(wo));
    wo.x=woxy.x;wo.y=woxy.y;

    float d = sdEllipsoid( wo - to_float3(0.5f,0.0f,0.0f), to_float3(0.5f,0.15f,0.05f) );

    if( d<res.x ) res = to_float4(d,9.0f,9.0f,0.0f);
    }

    return res;
}

__DEVICE__ float4 terrain_evil( float3 pos, float atime, float3 cen )
{
    float d = 999.0f;
    float4 res = to_float4(d,-1.0f,0.0f,0.0f);

    // terrain
    float fh = -0.1f + 0.09f*(_sinf(atime+2.0f*pos.x)+ 0.8f * _sinf(atime*1.7f+1.3f*pos.z));
    float l = length(swixz(pos - cen));

#if TERRAIN_DETAIL && 0
    float gt = fract_f(atime);
    fh -= 0.1f
        *_sinf(gt*8.0f+l*2.0f)
        *_expf( -1.0f*l*l )
        *_expf( -1.0f*gt )
        *smoothstep(0.0f,0.1f,gt);
#endif

    d = pos.y - fh;
    res = (d<res.x) ? to_float4(d,11.0f,1.0f,0.0f) : res;

#if TERRAIN_DETAIL
    // lava trees
    {
    float3 q = to_float3( mod_f(_fabs(pos.x), 3.0f)-1.5f,
                   pos.y,
                   mod_f(pos.z+1.5f, 3.0f)-1.5f );
    float2 id = to_float2( _floor(pos.x/3.0f), _floor((pos.z+1.5f)/3.0f) );
    float fid = id.x*31.1f + id.y*31.7f;
    float fy = fract_f(id.x*1.72f+atime*1.225f);
    float y = 0.9f*_powf(fy, 0.5f);
    float3 rad = to_float3(0.7f,1.0f+0.5f*_sinf(fid*431.19f),0.8f);
    // rad -= 0.05f*(_sinf(pos.x*3.0f)+_sinf(pos.y*6.0f)+_sinf(pos.z*5.0f));
    rad *= clamp(2.0f*fy*(1.0f-fy), 0.001f, 1.0f);
    float d2 = sdEllipsoid( q-to_float3(0.5f,y,0.0f), rad );
    float f = smoothstep( -0.2f,0.2f,
        _sinf(18.0f*pos.x)+_sinf(18.0f*pos.y)+_sinf(18.0f*pos.z) );
    d2 -= 0.007f*f; // non-euclidean distortion of surface.
    d = s_fminf(d, d2, 0.7f);

    // Reduce step size for terrain to increase accuracy
    // (preventing artifacts when the raymarcher goes inside
    // the terrain because of the noneuclidean distortions).
    // (this is a hacky solution)
	//    d *= 0.9f;

    res = (d<res.x) ? to_float4(d,11.0f,1.0f,0.0f) : res;
    }

    // candy
    {
    float3 q = to_float3( mod_f(pos.x+0.25f, 0.5f)-0.25f,
                          pos.y - fh,
                          mod_f(pos.z+0.25f, 0.5f)-0.25f);

    float2 id = _floor((swixz(pos)+0.25f)/0.5f);
    float2 fid = to_float2( id.x*21.1f + id.y*11.7f,
                            id.x*13.1f + id.y*51.7f );
    float2 dis = cos_f2(fid);

    float3 ofs = to_float3( dis.x*0.1f,
                           -0.25f+0.2f*fract_f(fid.x)+0.1f*_sinf(atime*1.2f+fid.x),
                            dis.y*0.1f);
    float3 group = to_float3( 0.0f,
                             -0.05f*(1.0f - _cosf(pos.x)*_cosf(pos.x)),
                             0.0f );
    float3 so = q - ofs - group;

    float angle = 0.0f + _sinf(fid.x);
    float cc = _cosf(angle);
    float ss = _sinf(angle);
    float2 soxz = mat2_multi_f2(make_mat2(cc, ss, -ss, cc) , swixz(so));
	so.x=soxz.x;so.z=soxz.y;



    float3 sso = to_float3(_fabs(so.x), so.y,so.z);
    float d = sdSphere( so, 0.1f );

    float co = 0.5f+0.5f*clamp( (pos.y-fh)/0.03f, 0.0f,1.0f );

    res = (d<res.x) ? to_float4(d,15.0f,co,0.0f) : res;

    d = sdSphere( sso - to_float3(0.034f, 0.02f, 0.09f), 0.025f);
    d = _fmaxf(res.x,-d);
    res = (d>res.x) ? to_float4(d,19.0f,0.01f,0.0f) : res;
    }
#endif

    return res;
}

