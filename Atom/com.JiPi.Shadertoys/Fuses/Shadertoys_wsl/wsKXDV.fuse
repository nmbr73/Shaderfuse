HeavenAndHellKernel =
    [[
//-----------------------
//-------- mat2 ---------
//-----------------------
 typedef struct
  {
	float2 r0, r1;
  } mat2;

#if defined(DEVICE_IS_OPENCL)
   #define inline __OVERLOADABLE__
#endif

 __DEVICE__ inline mat2 make_mat2( float2 A, float2 B)
  {
	mat2 C;
	C.r0 = A;
	C.r1 = B;
	return C;
  }

 __DEVICE__ inline mat2 make_mat2( float A, float B, float C, float D)
  {
	mat2 E;
	E.r0 = to_float2(A,B);
	E.r1 = to_float2(C,D);
	return E;
  }

__DEVICE__ inline float2 f2_multi_mat2( float2 A, mat2 B )
  {
	float2 C;
	C.x = A.x * B.r0.x + A.y * B.r0.y;
	C.y = A.x * B.r1.x + A.y * B.r1.y;
	return C;
  }

__DEVICE__ inline float2 mat2_multi_f2( mat2 B, float2 A)
  {
	float2 C;
	C.x = A.x * B.r0.x + A.y * B.r1.x;
	C.y = A.x * B.r0.y + A.y * B.r1.y;
	return C;
  }

#if defined(DEVICE_IS_OPENCL) || defined(DEVICE_IS_METAL)
__DEVICE__ float3 reflect(float3 I, float3 N) {return I - 2.0f * dot(N, I) * N;}
#endif

__DEVICE__ float fract_f(float A){return A - _floor(A);}
__DEVICE__ float mod_f(float value, float divisor) {  return value - divisor * _floor(value / divisor);}
__DEVICE__ float sign_f(float value) { if (value == 0.0f) return 0.0f; return value > 0.0f ? 1.0f : -1.0f;}
__DEVICE__ float3 abs_f3(float3 a) {return (to_float3(_fabs(a.x), _fabs(a.y),_fabs(a.z)));}
__DEVICE__ float2 cos_f2(float2 i) {float2 r; r.x = _cosf(i.x); r.y = _cosf(i.y); return r;}
__DEVICE__ float3 cos_f3(float3 i) {float3 r; r.x = _cosf(i.x); r.y = _cosf(i.y); r.z = _cosf(i.z); return r;}
#define lpowf _powf
__DEVICE__ float3 pow_f3(float3 a, float3 b) {float3 r; r.x = lpowf(a.x,b.x); r.y = lpowf(a.y,b.y); r.z = lpowf(a.z,b.z); return r;}

#define swixy(V) to_float2((V).x,(V).y)
#define swixz(V) to_float2((V).x,(V).z)
#define swiyz(V) to_float2((V).y,(V).z)

#define swixyz(V) to_float3((V).x,(V).y,(V).z)
#define swiyzw(V) to_float3((V).y,(V).z,(V).w)

  #define swixyy(V) to_float3((V).x,(V).y,(V).y)
  #define swiyxy(V) to_float3((V).y,(V).x,(V).y)
  #define swiyyx(V) to_float3((V).y,(V).y,(V).x)

// by andy durdin and norgg (@adurdin, @norgg)
// This work is licensed under a Creative Commons
// Attribution-NonCommercial-ShareAlike 3.0f Unported License.

// Based on “Happy Jumping” by Inigo Quilez

#define TERRAIN_DETAIL 1
#define SKY_DETAIL 1
#define COLOR_GRADING 1

// input: h [0,360] and s,v [0,1] - output: r,g,b [0,1]
__DEVICE__ float3 hsl2rgb(float3 c){
	return _mix(to_float3_s(c.z),_mix(clamp(to_float3(-1,2,2)-abs_f3(c.x-to_float3(3,2,4))*to_float3(-1,1,1),0.0f,1.0f),to_float3_s(c.z>0.5f),_fabs(0.5f-c.z)*2.0f),c.y);
}

__DEVICE__ float sdRoundBox( float3 p, float3 b, float r )
{
  float3 d = abs_f3(p) - b;
  return length(_fmaxf(d,to_float3_s(0.0f))) - r;
//         + _fminf(_fmaxf(d.x,_fmaxf(d.y,d.z)),0.0f); // remove this line for an only partially signed sdf
}

__DEVICE__ float sdSphere( float3 pos, float rad )
{
    return length(pos) - rad;
}

__DEVICE__ float sdStick( float3 p, float3 a, float3 b, float ra, float rb )
{
    float3 ba = b-a;
    float3 pa = p-a;

    float h = clamp( dot(pa,ba)/dot(ba,ba), 0.0f,1.0f );
    float r = _mix( ra, rb, h );
    return length(pa - h*ba) - r;
}

__DEVICE__ float sdEllipsoid( float3 pos, float3 rad )
{
    float k0 = length(pos/rad);
    float k1 = length(pos/rad/rad);
    return k0*(k0-1.0f)/k1;
}

__DEVICE__ float s_fminf( float a, float b, float k )
{
    float h = _fmaxf( k - _fabs(a-b), 0.0f );
    return _fminf(a,b) - h*h/(k*4.0f);
}

__DEVICE__ float s_fmaxf( float a, float b, float k )
{

    float h = _fmaxf( k - _fabs(a-b), 0.0f );
    return _fmaxf(a,b) + h*h/(k*4.0f);
}

__DEVICE__ float4 char_evil( float3 q, float atime, float sy, float sz, float cc, float ss, float y, float y2, float y3 )
{
    float d = 999.0f;
    float4 res = to_float4(d,-1.0f,0.0f,0.0f);

    // Body coordinate ref
    float3 b = q;
    float3 sb = to_float3( _fabs(b.x), b.y,b.z );

    // body
    {
    float3 rad = to_float3(0.25f,0.25f*sy,0.25f*sz);
    float d = sdEllipsoid(q, rad);
    if( d<res.x ) res = to_float4(d,18.0f,1.0f,0.0f);
    }

    // legs
    {
    float3 legBase = to_float3(0.15f,-0.25f,0.0f);
    legBase.y += 0.1f/sy;
    float la = -1.0f*sign_f(b.x)*_cosf(3.1416f*atime);
    float ccc = _cosf(la);
    float sss = _sinf(la);
    float3 legEnd = legBase + 0.2f*to_float3(0.2f, -ccc, sss);
    float d2 = sdStick( sb,
                  legBase,
                  legEnd,
                  0.03f,
                  0.06f );
    d = s_fminf(res.x,d2,0.02f);
    if( d<res.x ) res = to_float4(d, 16.0f,1.0f,0.0f);
    }

    // Head coordinate ref
    float3 neck = to_float3(0.0f,0.0f,0.12f);
    float3 h = q - neck;

    // Head rotation
    float hr = -1.0f+2.0f*smoothstep( -0.2f,0.2f, -0.4f*_sinf(atime * 1.7f) );
    float hp = -1.0f+2.0f*smoothstep( -0.4f,0.4f, 0.1f+0.15f*_cosf(atime * 3.3f) );
    //hr = -5.0f*(iMouse.x/iResolution.x - 0.5f); // mouse control
    //hp = -2.0f*(iMouse.y/iResolution.y - 0.5f); // mouse control
    cc = _cosf(hr);
    ss = _sinf(hr);
    float2 hxz = mat2_multi_f2(make_mat2(cc,-ss,ss,cc),swixz(h));
    h.x=hxz.x;h.z=hxz.y;


    cc = _cosf(hp);
    ss = _sinf(hp);
    float2 hyz = mat2_multi_f2(make_mat2(cc,-ss,ss,cc),swiyz(h));
	h.y=hyz.x;h.z=hyz.y;

    float3 sh = to_float3( _fabs(h.x), h.y,h.z );

    // pants (using head coordinates so they angle when the head does)
    if (h.y < 0.0f) { res.y = 6.0f; }

    // head
    {

    float d2 = sdEllipsoid(h - to_float3(0.0f,0.28f,0.0f), to_float3(0.15f,0.2f,0.23f));
    float d3 = sdEllipsoid(h - to_float3(0.0f,0.28f,-0.05f), to_float3(0.23f,0.2f,0.2f));

    d2 = s_fminf(d2,d3, 0.05f);
    d = s_fminf(res.x,d2, 0.15f);
    if( d<res.x ) res = to_float4(d, 12.0f,1.0f,0.0f);
    }

    // eyebrows
    {
    float3 eb = sh - to_float3(0.04f,0.33f,0.16f);
    float er = -0.8f;
    cc = _cosf(er);
    ss = _sinf(er);
    float2 ebxy = mat2_multi_f2((make_mat2(cc,ss,-ss,cc)),swixy(eb));
    eb.x=ebxy.x;eb.y=ebxy.y;


    float d2 = sdEllipsoid(eb, to_float3(0.06f,0.03f,0.07f));
    d = s_fminf(d,d2, 0.02f);
    //d = _fminf(d,d2);
    if( d<res.x ) res = to_float4(d, 12.0f,1.0f,0.0f);
    }

    // wrinkles
    {
    float ry = (h.y-0.03f) - 1.3f*h.x*h.x;
    d += 0.001f*_sinf(ry*160.0f) * (1.0f - smoothstep(0.0f,0.05f,_fabs(ry)));
    if( d<res.x ) res = to_float4(d, 12.0f,1.0f,0.0f);
    }

    // arms
    {
    float d2 = sdStick( sh + neck,
                  to_float3(0.20f,0.25f,0.1f+-0.05f),
                  to_float3(0.3f+0.1f*y3,-0.1f+0.4f*y3,0.1f+0.05f),
                  0.03f,
                  0.06f );
    d = s_fminf(d,d2,0.02f);
    if( d<res.x ) res = to_float4(d, 12.0f,1.0f,0.0f);
    }

    // ears
    {
    float d2 = sdStick( sh,
                  to_float3(0.1f,0.4f,-0.01f),
                  to_float3(0.2f,0.4f+0.15f*y2,0.02f-0.1f*y2),
                  0.01f,
                  0.03f );
    d = s_fminf(d,d2,0.04f);
    if( d<res.x ) res = to_float4(d, 12.0f,1.0f,0.0f);
    }

    // unicorn horn
    {
    float ro = -0.6f;
    float cc = _cosf(ro);
    float ss = _sinf(ro);
    float3 hh = (sh - to_float3(0.1f, 0.4f, 0.1f));
    float2 hhxy = mat2_multi_f2(make_mat2(cc,-ss,ss,cc),swixy(hh));
	hh.x=hhxy.x;hh.y=hhxy.y;


    float d = sdStick(hh,
        to_float3(0.0f, 0.0f, 0.0f),
        to_float3(0.0f, 0.2f, 0.0f),
        0.03f,
        0.01f);
    if( d<res.x ) res = to_float4(d, 17.0f,1.0f,0.0f);
    }

    // mouth
    {
    float d = sdEllipsoid(h - to_float3(0.0f,0.15f - 2.0f*h.x*h.x*h.x,0.15f), to_float3(0.2f,0.04f + 0.02f * _sinf(atime * 1.3f),0.2f));
    float occ = 1.0f-smoothstep( -0.01f,0.001f, -d );
    d = s_fmaxf(res.x,-d,0.01f);
    if( d>res.x ) res = to_float4(d, 12.0f,occ,0.0f);
    }

    // tooth
    {
    //float d = sdRoundBox( h - to_float3(0.0f,0.19f + 0.005f * _sinf(atime * 1.3f),0.16f), to_float3(0.02f,0.011f,0.01f), 0.005f );
    float y = 0.005f * _sinf(atime * 1.3f);
    float d = sdRoundBox( sh - to_float3(0.018f,0.19f + y,0.16f), to_float3(0.01f,0.011f,0.01f), 0.005f );
//  d = _fminf(d, sdRoundBox( sh - to_float3(0.058f,0.185f + y,0.15f), to_float3(0.01f,0.011f,0.01f), 0.005f ));
    d = _fminf(d, sdStick( sh, to_float3(0.058f,0.19f + y,0.15f), to_float3(0.058f,0.16f + y,0.15f),
                       0.01f, 0.001f ));
    if( d<res.x ) res = to_float4(d,20.0f,1.0f,0.0f);
    }

    // eye
    {
    // Eye rotation
    float3 e = h - to_float3(0.08f,0.28f,0.16f);

    // Maybe there's a way to get the eyes to repeat without
    // symmetry, but if so I don't know what it would be.
    // The "limited repetition" example's opRepLim works,
    // but I don't know how to do get two eyes with it instead
    // of three:
    //
    //    float rep_s = 0.16f;
    //    float3 rep_lim = to_float3(1.0f, 0.0f, 0.0f);
    //    float3 e_rep = e - rep_s*clamp( _round(e/rep_s), -rep_lim,rep_lim );
    //    e = e_rep;
    //
    // So I'm just going to do each eye separately with its own coordinate
    // basis instead*:
    //
    // (*also lets me rotate the eyes differently, which is better swiyw(a)ay!)

    float3 e0 = e;
    float3 e1 = e - to_float3(-0.16f, 0.0f, 0.0f);

    // Horizontal eye movement beyond -0.7f0.0.0f0.7 looks weird.
    // Vertical eye movement beyond -0.5f0.0.0f0.8 looks weird.
    // But we don't use the full range here, because we're also
    // tilting the head.
    const float es = 0.05f; // eye smoothing
    float etime = atime + 0.1f; // eyes lead the head movement by a moment.
    float er = -0.5f*(-1.0f + 2.0f*smoothstep( -es, es, _sinf(etime * 1.7f) ));
    float ep = 0.1f + 0.45f*(-1.0f + 2.0f*smoothstep( -es, es, _cosf(etime * 3.3f) ));
    //er = clamp( -5.0f*(iMouse.x/iResolution.x - 0.5f), -0.7f,0.7f ); // mouse control
    //ep = clamp( -2.0f*(iMouse.y/iResolution.y - 0.5f), -0.5f,0.8f ); // mouse control

    // BUG: eyes ought to look at something world coordinates,
    // and remain stable even when the head and body move. But
    // that's hard... I'm not set up to do the inverse transforms :(

    // The eyes rotate less when moving towards the nose.
    float er0 = (er < 0.0f ? er : 0.4f * er);
    float cc0 = _cosf(er0);
    float ss0 = _sinf(er0);
    float2 e0xz = mat2_multi_f2(make_mat2(cc0,-ss0,ss0,cc0),swixz(e0));
	e0.x=e0xz.x;e0.z=e0xz.y;

    float er1 = (er > 0.0f ? er : 0.4f * er);
    float cc1 = _cosf(er1);
    float ss1 = _sinf(er1);
    float2 e1xz = mat2_multi_f2(make_mat2(cc1,-ss1,ss1,cc1),swixz(e1));
	e1.x=e1xz.x;e1.z=e1xz.y;

	// But both eyes pitch identically.
    cc = _cosf(ep);
    ss = _sinf(ep);
    float2 e0yz = mat2_multi_f2(make_mat2(cc,-ss,ss,cc),swiyz(e0));
	e0.y=e0yz.x;e0.z=e0yz.y;

    float2 e1yz = mat2_multi_f2(make_mat2(cc,-ss,ss,cc),swiyz(e1));
	e1.y=e1yz.x;e1.z=e1yz.y;

    // Eye occlusion
    float eo = 1.0f-5.0f*smoothstep( 0.06f,0.4f, sh.x );

    // Left eye (e0)
    d = sdSphere( e0, 0.05f );
    if( d<res.x ) res = to_float4(d,13.0f,eo,0.0f);
    // pupil
    d = sdSphere( e0 - to_float3(0.00f,0.00f,0.04f), 0.02f );
    if( d<res.x ) res = to_float4(d,14.0f,1.0f,0.0f);

    // Right eye (e1)
    d = sdSphere( e1, 0.05f );
    if( d<res.x ) res = to_float4(d,13.0f,eo,0.0f);
    // pupil
    d = sdSphere( e1 - to_float3(0.00f,0.00f,0.04f), 0.02f );
    if( d<res.x ) res = to_float4(d,14.0f,1.0f,0.0f);
    }

    // --- wings ---

    {
    float ws = 2.3f;
    float3 wo = _mix(sb, sh, 0.8f) - to_float3(0.0f,0.1f,-0.16f);

    //float wf = 0.5f + 0.6f * _sinf(ws * atime);
    //float cc = _cosf(wf);
    //float ss = _sinf(wf);
    //swiyz(wo) = make_mat2(cc,ss,-ss,cc) * swiyz(wo);

    float wr = -0.1f - 0.8f * _powf(_fabs(_sinf(ws * atime)), 0.5f);
    cc = _cosf(wr);
    ss = _sinf(wr);
    float2 woxy = mat2_multi_f2(make_mat2(cc,ss,-ss,cc) , swixy(wo));
	wo.x=woxy.x;wo.y=woxy.y;

    float d = sdEllipsoid( wo - to_float3(0.5f,0.0f -1.6f*_powf(wo.x-0.3f,2.0f),0.0f), to_float3(0.3f,0.15f,0.01f) );

    if( d<res.x ) res = to_float4(d,19.0f,0.0f,0.0f);
    }

    return res;
}

__DEVICE__ float4 char_happy( float3 q, float atime, float sy, float sz, float cc, float ss, float y, float y2, float y3 )
{
