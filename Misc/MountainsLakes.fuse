    InUndergroundColor4ColorA = self:AddInput("Alpha", "UndergroundColor4Alpha", { INP_Default  = 1.0, IC_ControlID = 3, attrs})

   self:EndControlNest()

  self:EndControlNest()

self:EndControlNest()

  self:BeginControlNest("light", "light", false, {})

    ctrl_grp_cnt = (ctrl_grp_cnt==nil) and 1 or (ctrl_grp_cnt+1)

