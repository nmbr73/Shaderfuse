ShaderKernelCode =
[[

// ----------------------------------------------------------------------------------
// - Image                                                                          -
// ----------------------------------------------------------------------------------
// Connect Image 'Cubemap: St Peters Basilica_0' to iChannel0


#define PI 3.14159265f

// The x and y coordinates of the camera while at postion z. Also used as the center of the tunnel at position z
__DEVICE__ float2 path(float z){
    return to_float2(0.5f*_sinf(z), 0.5f*_sinf(z*0.7f));
}

// Distance to the edge of the tunnel
__DEVICE__ float map(float3 p) {
    float d = -length(swi2(p,x,y) - path(p.z)) + 1.2f + 0.3f * _sinf(p.z*0.4f);
    return d;
}

// Normal of distance function using forward differences
__DEVICE__ float3 normal(float3 p){
    float d = map(p);
    float2 e = to_float2(0.01f, 0.0f);

    float3 n = d - to_float3(
                                map(p - swi3(e,x,y,y)),
                                map(p - swi3(e,y,x,y)),
                                map(p - swi3(e,y,y,x))
                            );

    return normalize(n);
}

// Smooth maximum function
__DEVICE__ float sMax(float a, float b, float k) {
    return _logf(exp(k*a) + _expf(k*b)) / k;
}

// Bump map, gives the height of the tiles
__DEVICE__ float bumpFunction(float3 p, float iTime) {
    float2 c = path(p.z);
    float id = _floor(p.z*4.0f-0.25f);
    float h = 0.5f + 0.5f*_sinf(_atan2f(p.y - c.y, p.x - c.x) * 20.0f + 1.5f * (2.0f*mod_f(id, 2.0f)-1.0f) + iTime * 5.0f);
    h = sMax(h, 0.5f + 0.5f*_sinf(p.z *8.0f*PI), 16.0f);
    h *= h;
    h *= h*h;
    return 1.0f-h;
}

// Calculate normal of the bump map using central differences and add this to the normal of the tunnel
__DEVICE__ float3 bumpNormal(float3 p, float3 n, float bumpFactor, float iTime) {
    float3 e = to_float3(0.01f, 0.0f, 0.0f);

    float f  = bumpFunction(p, iTime);
    float fx = bumpFunction(p - swi3(e,x,y,y), iTime);
    float fy = bumpFunction(p - swi3(e,y,x,y), iTime);
    float fz = bumpFunction(p - swi3(e,y,y,x), iTime);
    // Forward difference gradient (cheaper alternative)
    //vec3 grad = to_float3(fx - f, fy - f, fz - f) / e.x;

    float fx2 = bumpFunction(p + swi3(e,x,y,y), iTime);
    float fy2 = bumpFunction(p + swi3(e,y,x,y), iTime);
    float fz2 = bumpFunction(p + swi3(e,y,y,x), iTime);
    // Central difference gradient
    float3 grad = (to_float3(fx - fx2, fy - fy2, fz - fz2)) / (e.x * 2.0f);

    // Remove normal component so we only perturb tangentially
    grad -= n * dot(n, grad);

    // Combine with original normal
    return normalize(n + grad * bumpFactor);
}

__DEVICE__ mat2 rot(float a){ return to_mat2(_cosf(a),_sinf(a),-_sinf(a),_cosf(a)); }





__KERNEL__ void TiledGildedRainbowTunnelFuse(__CONSTANTREF__ Params*  params,  __TEXTURE2D__ iChannel0, __TEXTURE2D_WRITE__ destinationTexture)
{
   DEFINE_KERNEL_ITERATORS_XY(fusion_x, fusion_y);

   if (fusion_x >= params->width || fusion_y >= params->height)
     return;

  float2 iResolution = to_float2(params->iResolution[0], params->iResolution[1]);
  float  iTime       = params->iTime;
  float4 iMouse      = to_float4(params->iMouse[0],params->iMouse[1],params->iMouse[2],params->iMouse[3]);
  float4 fragColor   = to_float4_s(0.0f);
  float2 fragCoord   = to_float2(fusion_x,fusion_y);


  float4 GlowCol = to_float4(params->GlowCol[0], params->GlowCol[1], params->GlowCol[2], params->GlowCol[3]);
  float2 ViewXY = to_float2(params->ViewXY[0], params->ViewXY[1]);
  float  ViewZ = params->ViewZ;
  float  Glow = params->Glow;

  // --------

    float2 uv = (fragCoord*2.0f - iResolution)/iResolution.y;

    // Camera position and camera target follow the path
    float vel = iTime * 1.5f;
    float3 ro = to_float3_aw(path(vel - 1.0f), vel - 1.0f) + to_float3_aw(ViewXY, ViewZ);
    float3 ta = to_float3_aw(path(vel), vel);

    // Set up ray direction
    float3 fwd = normalize(ta - ro);
    float3 up = to_float3(0, 1.0f, 0);
    float3 right = cross(fwd, up);;
    up = cross(right, fwd);
    float fl = 1.2f;
    float3 rd = normalize(fwd + fl * (uv.x*right + uv.y*up));


    //#############################################################
    float x = iMouse.x == 0.0f && iMouse.y == 0.0f ? -0.005f : -(iMouse.y/iResolution.y * 0.25f - 0.125f) * PI;
    float y = iMouse.x == 0.0f && iMouse.y == 0.0f ?  0.015f : -(iMouse.x/iResolution.x * 0.25f - 0.125f) * PI;

    mat2 rx = rot(x);
    mat2 ry = rot(y);

    swi2S(ro,y,z, mul_f2_mat2(swi2(ro,y,z) , rx));
    swi2S(rd,y,z, mul_f2_mat2(swi2(rd,y,z) , rx));
    swi2S(ro,x,z, mul_f2_mat2(swi2(ro,x,z) , ry));
    swi2S(rd,x,z, mul_f2_mat2(swi2(rd,x,z) , ry));
    //###############################################################


    // Set up golden glow
    float glow = 0.0f;
    float3 glowCol = swi3(GlowCol,x,y,z);//o_float3(9.0f, 7.0f, 4.0f);

    // Set up raymarching
    float t = 0.0f;
    float3 col = to_float3(0.0f, 0.0f, 0.0f);;

    for (int i=0; i<125; i++){
        float3 p = ro + t*rd;
        float d = map(p);

        // Add glow each step based on distance to edge tunnel
        glow += _expf(-d * Glow) * 0.005f;

        if (d<0.01f){
            // Get light direction from normal, then distort normal for the tiles
            float3 n = normal(p);
            float3 lightDir = n;
            n = bumpNormal(p, n, 0.02f, iTime);

            // Get ring and angle of position
            float2 c = path(p.z);
            float2 id = to_float2(_floor(p.z*4.0f-0.25f), _atan2f(p.y-c.y, p.x-c.x));


            // Set the color of the tile based on the id
            float3 tileCol = to_float3_s(0.7f);
            tileCol += 0.4f*to_float3(_sinf(id.x), _cosf(id.x), 0);
            tileCol += 0.3f*_sinf(id.x*0.5f + id.y*6.0f - iTime*4.0f);
            float3 tileGray  = to_float3_s(0.5f);
            float height = bumpFunction(p, iTime);
            float3 baseCol = _mix(tileGray, tileCol, height);

            // Lighting: diffuse, specular and reflected light
            float diffuseL = _fmaxf(dot(n, lightDir), 0.0f);
            col += diffuseL * baseCol;

            float3 h = normalize(lightDir - rd);
            float specL = _powf(_fmaxf(dot(n, h), 0.0f), 64.0f);
            col += specL * 0.3f;

            float3 r = reflect(rd, n);
            float3 reflCol = swi3(decube_f3(iChannel0,r),x,y,z);
            col = _mix(col, reflCol, 0.3f);

            break;
        }

        t+=d;
    }

    // Add the golden glow
    col += glowCol*glow;

    // Gamma correction
    col = pow_f3(col, to_float3_s(2.2f));

    // Output to screen
    fragColor = to_float4_aw(col,1.0f);

  _tex2DVec4Write(destinationTexture, fusion_x, fusion_y, fragColor);
}
]]
