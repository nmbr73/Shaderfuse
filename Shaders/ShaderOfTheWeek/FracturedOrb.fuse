// http://tuxedolabs.blogspot.com/2018/05/bokeh-depth-of-field-in-single-pass.html

//float2 uPixelSize; //The size of a pixel: to_float2(1.0f/width, 1.0f/height)
//float uFar = 1.0f; // Far plane

#define GOLDEN_ANGLE 2.39996323f
//const float MAX_BLUR_SIZE = 10.0f;
//const float RAD_SCALE = 1.0f; // Smaller = nicer blur, larger = faster

__DEVICE__ float getBlurSize(float depth, float focusPoint, float focusScale, float MAX_BLUR_SIZE) {
    float coc = clamp((1.0f / focusPoint - 1.0f / depth)*focusScale, -1.0f, 1.0f);
    return _fabs(coc) * MAX_BLUR_SIZE;
}

__DEVICE__ float3 depthOfField(float2 texCoord, float focusPoint, float focusScale, float MAX_BLUR_SIZE, float uFar, bool DISABLE_DOF, float RAD_SCALE, float2 uPixelSize, __TEXTURE2D__ iChannel0) {
    float4 centerTex = _tex2DVecN(iChannel0,texCoord.x,texCoord.y,15);
    float centerDepth = centerTex.w * uFar;
    float centerSize = getBlurSize(centerDepth, focusPoint, focusScale, MAX_BLUR_SIZE);
    float3 color = swi3(centerTex,x,y,z);

    if (DISABLE_DOF)
      return color;

    float tot = 1.0f;

    float radius = RAD_SCALE;
    for (float ang = 0.0f; ang < 10000.0f; ang += GOLDEN_ANGLE) {
        if (radius >= MAX_BLUR_SIZE) break;

        float2 tc = texCoord + to_float2(_cosf(ang), _sinf(ang)) * uPixelSize * radius;
        float4 sampleTex = _tex2DVecN(iChannel0,tc.x,tc.y,15);
        float3 sampleColor = swi3(sampleTex,x,y,z);
        float sampleDepth = sampleTex.w * uFar;
        float sampleSize = getBlurSize(sampleDepth, focusPoint, focusScale, MAX_BLUR_SIZE);
        //if (sampleSize < centerSize) break;
        if (sampleDepth > centerDepth) {
            sampleSize = clamp(sampleSize, 0.0f, centerSize*2.0f);
        }
        float m = smoothstep(radius-0.5f, radius+0.5f, sampleSize);
        color += _mix(color/tot, sampleColor, m);
        tot += 1.0f;
        radius += RAD_SCALE/radius;

        // modification: exit early when we're in focus
       // if (centerDepth < uFar / 3.0f && m == 0.0f) break;
    }
    color /= tot;
    return color;
}


// http://filmicworlds.com/blog/filmic-tonemapping-operators/
__DEVICE__ float3 tonemap2(float3 texColor, float ColMul, float Col1, float Col2, float Col3, float ColOff) {
     texColor /= 2.0f;
     texColor *= ColMul;//16.0f;  // Hardcoded Exposure Adjustment
     float3 x = _fmaxf(to_float3_s(0),texColor-0.004f);
     //return (x*(6.2f*x+0.5f))/(x*(6.2f*x+1.7f)+0.06f);
     return (x*(Col1*x+Col2))/(x*(Col1*x+Col3)+ColOff);
}


