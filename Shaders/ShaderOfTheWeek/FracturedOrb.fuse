__DEVICE__ float2 map(float3 p, float OUTER, float INNER, float animT, float time, bool WOBBLE1, bool WOBBLE2, float scale) {
    //float scale = 2.5f;
    p /= scale;

    float outerBound = length(p) - OUTER;

    if (WOBBLE1)
    {
        float bound = outerBound - 0.05f;
        bound *= scale;
        if (bound > 0.002f) {
            return to_float2(bound, 0.0f);
        }
    }

    mat3 trs;

    if (WOBBLE2)
    {
        float spin = time * (PI*2.0f) * (1.0f/5.0f);
        trs = mul_mat3_mat3(rotX(_atan2f(1.0f/PHI, 1.0f)) , rotY(-spin));
        p = mul_mat3_f3(trs , p);
    }
    else
    {
        float spin = time * (PI/2.0f) - 0.15f;
        swi2S(p,x,z, pR(swi2(p,x,z), spin));
    }

    // Buckyball faces
    // ---------------

    // Four closest vertices of a spherical pentakis dodecahedron
    // or, four closest faces of a buckyball

    float3 va = icosahedronVertex(p);
    float3 vb = dodecahedronVertex(p);

    // Second closest dodecahedron vertex
    float side = boolSign(dot(p, cross(va, vb)));
    float r = PI * 2.0f / 5.0f * side;
    float3 vc = erot(vb, va, r);

    // Third closest dodecahedron vertex
    float3 vd = erot(vb, va, -r);

    float d = 1e12f;
    float3 pp = p;

    // Render the nearest four fragments to get
    // a clean distance estimation

    for (int i = 0; i < 4; i++) {
        // Offset space
        if (WOBBLE2)
        {
            float3 dir = normalize(to_float3(1,1,0));
            dir = mul_f3_mat3(dir , transpose(trs));
            float sp = 2.0f;
            float t = mod_f((time - dot(va, dir) / (0.5f * sp)), 1.0f);
            float anim = _sinf(t * PI * 1.0f * sp) * 0.5f + 0.5f;
            anim = _mix(0.0f, 0.05f, anim);
            p -= va * anim;
        }
        else
        {
            float t = mod_f(time * 2.0f/3.0f + 0.25f - dot(swi2(va,x,y), to_float2(1,-1)) / 30.0f, 1.0f);
            float t2 = clamp(t * 5.0f - 1.7f, 0.0f, 1.0f);
            float explode = 1.0f - _powcf(1.0f - t2, 10.0f); // expand
            explode *= 1.0f - _powcf(t2, 5.0f); // contract
            explode += (smoothstep(0.32f, 0.34f, t) - smoothstep(0.34f, 0.5f, t)) * 0.05f;
            explode *= 1.4f;
            t2 = _fmaxf(t - 0.53f, 0.0f) * 1.2f;
            float wobble = _sinf(expImpulse(t2, 20.0f) * 2.2f + _powcf(3.0f * t2, 1.5f) * 2.0f * PI * 2.0f - PI) * smoothstep(0.4f, 0.0f, t2) * 0.2f;
            float anim = wobble + explode;
            p -= va * anim / 2.8f;
        }

        // Build boundary edge of face
        float edgeA = dot(p, normalize(vb - va));
        float edgeB = dot(p, normalize(vc - va));
        float edgeC = dot(p, normalize(vd - va));
        float edge = _fmaxf(max(edgeA, edgeB), edgeC);
        if (!WOBBLE2)
          edge -= 0.005f;


        // Intersect with object
        d = _fminf(d, smax(object(p, OUTER, INNER), edge, 0.002f));

        // Reset space for next iteration
        p = pp;

        // Cycle faces for next iteration
        float3 va2 = va;
        va = vb;
        vb = vc;
        vc = vd;
        vd = va2;
    }

    if (!WOBBLE2)
    {
        // Slow down ray as we approach non-exploded object
        float bound = outerBound - 0.002f;
        if (bound * scale > 0.002f) {
            d = _fminf(d, bound);
        }
    }

    return to_float2(d * scale, 1.0f);
}


