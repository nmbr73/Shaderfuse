__DEVICE__ float intersectPlane(float3 rOrigin, float3 rayDir, float3 origin, float3 normal, float3 up, out float2 *uv) {
    float d = dot(normal, (origin - rOrigin)) / dot(rayDir, normal);
    float3 point = rOrigin + d * rayDir;
    float3 tangent = cross(normal, up);
    float3 bitangent = cross(normal, tangent);
    point -= origin;
    *uv = to_float2(dot(tangent, point), dot(bitangent, point));
    return _fmaxf(sign_f(d), 0.0f);
}

//mat3 envOrientation;

__DEVICE__ float3 light(float3 origin, float3 rayDir, mat3 envOrientation) {
    origin = -origin;
    rayDir = -rayDir;

    origin = mul_f3_mat3(origin, envOrientation);
    rayDir = mul_f3_mat3(rayDir, envOrientation);

    float2 uv;
    float3 pos = to_float3_s(-6);
    float hit = intersectPlane(origin, rayDir, pos, normalize(pos), normalize(to_float3(-1,1,0)), &uv);
    float l = smoothstep(0.75f, 0.0f, fBox(uv, to_float2(0.5f,2)) - 1.0f);
    l *= smoothstep(6.0f, 0.0f, length(uv));
    return to_float3_s(l) * hit;
}

__DEVICE__ float3 env(float3 origin, float3 rayDir, mat3 envOrientation, float3 BGCOL) {
    origin = -1.0f*swi3((to_float4_aw(origin, 1)),x,y,z); //??????????
    rayDir = -1.0f*swi3((to_float4_aw(rayDir, 0)),x,y,z); //??????????

    origin = mul_f3_mat3(origin, envOrientation);
    rayDir = mul_f3_mat3(rayDir, envOrientation);

    float l = smoothstep(0.0f, 1.7f, dot(rayDir, to_float3(0.5f,-0.3f,1))) * 0.4f;
    return to_float3_s(l) * BGCOL;
}

//========================================================
// Marching
//========================================================

#define ZERO 0 //(_fminf(iFrame,0))

// https://iquilezles.org/articles/normalsSDF
__DEVICE__ float3 normal( in float3 pos, float OUTER, float INNER, float animT, float time, bool WOBBLE1, bool WOBBLE2, float scale )
{
    float3 n = to_float3_s(0.0f);
    for( int i=ZERO; i<4; i++ )
    {
        float3 e = 0.5773f*(2.0f*to_float3((((i+3)>>1)&1),((i>>1)&1),(i&1))-1.0f);
        n += e*map(pos+0.001f*e, OUTER, INNER, animT, time, WOBBLE1, WOBBLE2, scale).x;
    }
    return normalize(n);
}

struct Hit {
    float2 res;
    float3 p;
    float len;
    float steps;
};

__DEVICE__ struct Hit march(float3 origin, float3 rayDir, float invert, float maxDist, float understep, float OUTER, float INNER, float animT, float time, bool WOBBLE1, bool WOBBLE2, float scale) {
    float3 p;
    float len = 0.0f;
    float dist = 0.0f;
    float2 res = to_float2_s(0.0f);
    float2 candidate = to_float2_s(0.0f);
    float steps = 0.0f;

    for (float i = 0.0f; i < 300.0f; i++) {
        len += dist * understep;
        p = origin + len * rayDir;
        candidate = map(p, OUTER, INNER, animT, time, WOBBLE1, WOBBLE2, scale);
        dist = candidate.x * invert;
        steps += 1.0f;
        res = candidate;
        if (dist < 0.001f) {
            break;
        }
        if (len >= maxDist) {
            len = maxDist;
            res.y = 0.0f;
            break;
        }
    }

    struct Hit ret = {res, p, len, steps};
    return ret;//Hit(res, p, len, steps);
}

__DEVICE__ mat3 sphericalMatrix(float2 tp) {
    float theta = tp.x;
    float phi = tp.y;
    float cx = _cosf(theta);
    float cy = _cosf(phi);
    float sx = _sinf(theta);
    float sy = _sinf(phi);
    return to_mat3(
                      cy, -sy * -sx, -sy * cx,
                      0, cx, sx,
                      sy, cy * -sx, cy * cx
                  );
}

__DEVICE__ mat3 calcLookAtMatrix(float3 ro, float3 ta, float3 up) {
    float3 ww = normalize(ta - ro);
    float3 uu = normalize(cross(ww,up));
    float3 vv = normalize(cross(uu,ww));
    return to_mat3_f3(uu, vv, ww);
}

__KERNEL__ void FracturedOrbFuse__Buffer_A(__CONSTANTREF__ Params*  params,  __TEXTURE2D__ iChannel0, __TEXTURE2D_WRITE__ destinationTexture)
{
   DEFINE_KERNEL_ITERATORS_XY(fusion_x, fusion_y);

   if (fusion_x >= params->width || fusion_y >= params->height)
     return;

  float2 iChannelResolution[1];
  iChannelResolution[0] = to_float2(params->iChannelResolution[0][0], params->iChannelResolution[0][1]);
  float2 iResolution = to_float2(params->iResolution[0], params->iResolution[1]);
  float  iTime       = params->iTime;
  float4 iMouse      = to_float4(params->iMouse[0],params->iMouse[1],params->iMouse[2],params->iMouse[3]);
  int    iFrame      = params->iFrame;
  float4 fragColor   = to_float4_s(0.0f);
  float2 fragCoord   = to_float2(fusion_x,fusion_y);

  bool   WOBBLE1 = params->WOBBLE1;
  bool   WOBBLE2 = params->WOBBLE2;
  bool   WOBBLE_DUR = params->WOBBLE_DUR;
  bool   DARK_MODE = params->DARK_MODE;
  bool   HW_PERFORMANCE = params->HW_PERFORMANCE;
  bool   DISABLE_DOF = params->DISABLE_DOF;
  bool   Refract2 = params->Refract2;
  bool   Invert = params->Invert;
  float4 BKGCOL = to_float4(params->BKGCOL[0], params->BKGCOL[1], params->BKGCOL[2], params->BKGCOL[3]);
  float4 Extriction = to_float4(params->Extriction[0], params->Extriction[1], params->Extriction[2], params->Extriction[3]);
  float2 ViewDXY = to_float2(params->ViewDXY[0], params->ViewDXY[1]);
  float  ViewDZ = params->ViewDZ;
  float2 ViewXY = to_float2(params->ViewXY[0], params->ViewXY[1]);
  float  ViewZ = params->ViewZ;
  float  scale = params->scale;
  float  OUTER = params->OUTER;
  float  INNER = params->INNER;
  float  Duration = params->Duration;
  float  MAX_DISPERSE = params->MAX_DISPERSE;
  float  MAX_BOUNCE = params->MAX_BOUNCE;
  float  uFar = params->uFar;
  float  MAX_BLUR_SIZE = params->MAX_BLUR_SIZE;
  float  RAD_SCALE = params->RAD_SCALE;
  float  Alpha = params->Alpha;
  float  refmul = params->refmul;
  float  refoff = params->refoff;
  float  Extric = params->Extric;

  float  ColMul = params->ColMul;
  float  Col1 = params->Col1;
  float  Col2 = params->Col2;
  float  Col3 = params->Col3;
  float  ColOff = params->ColOff;

  // --------
    fragCoord += 0.5f;

    if (HW_PERFORMANCE)
    {
       MAX_DISPERSE = 5.0f;
       MAX_BOUNCE   = 10.0f;
    }

    //float scale = 2.5f;
    float3 BGCOL = swi3(BKGCOL,x,y,z);//to_float3(0.9f,0.83f,1);
    float animT;
    //float OUTER = 0.35f;
    //float INNER = 0.24f;

    float duration = 10.0f/Duration;//3.0f;
    if (WOBBLE_DUR)
        duration = 2.0f;

    float time = mod_f(iTime / duration, 1.0f);

    mat3 envOrientation = sphericalMatrix(((to_float2(81.5f, 119) / to_float2_s(187)) * 2.0f - 1.0f) * 2.0f);
    if (DARK_MODE)
         envOrientation = sphericalMatrix((to_float2(0.7299465240641712f,0.3048128342245989f) * 2.0f - 1.0f) * 2.0f);

    float2 uv = (2.0f * fragCoord - iResolution) / iResolution.y;

    struct Hit hit, firstHit;
    float2 res;
    float3 p, rayDir, origin, sam, ref, raf, nor, camOrigin, camDir;
    float invert, ior, offset, extinctionDist, maxDist, firstLen, bounceCount, wavelength;

    float3 col = to_float3_s(0);
    float focal = 3.8f;
    bool refracted;

    float3 bgCol = BGCOL * 0.22f;

    invert = 1.0f;
    maxDist = 15.0f;

    camOrigin = to_float3(0,0,9.5f) + to_float3_aw(ViewXY,ViewZ);
    camDir = normalize(to_float3_aw(uv * 0.168f, -1.0f) + to_float3_aw(ViewDXY, ViewDZ));

    //############### 3D Mouse-Rotation des Objektes ##############
    float crz = (iMouse.x - iResolution.x / 2.0f) / iResolution.x * PI;
    float crx = (iMouse.y - iResolution.y / 2.0f) / iResolution.y * PI;

    mat3 m = mul_mat3_mat3(to_mat3(_cosf(crz), 0.0f, _sinf(crz), 0.0f, 1.0f, 0.0f, -_sinf(crz), 0.0f, _cosf(crz)) ,
                           to_mat3(1.0f, 0.0f, 0.0f, 0.0f, _cosf(crx), _sinf(crx), 0.0f, -_sinf(crx), _cosf(crx)));

    if(iMouse.z > 0.0f)
    {
        camOrigin = mul_mat3_f3(m , camOrigin);
        camDir    = mul_mat3_f3(m , camDir);
    }
    //#############################################################

    firstHit = march(camOrigin, camDir, invert, maxDist, 0.8f, OUTER, INNER, animT, time, WOBBLE1, WOBBLE2, scale);
    firstLen = firstHit.len;

    float steps = 0.0f;

    for (float disperse = 0.0f; disperse < MAX_DISPERSE; disperse++) {
        invert = 1.0f;
        sam = to_float3_s(0);

        origin = camOrigin;
        rayDir = camDir;

        extinctionDist = 0.0f;
        wavelength = disperse / MAX_DISPERSE;
        float rand = texture(iChannel0, (fragCoord + _floor(iTime * 60.0f) * 10.0f) / iChannelResolution[0]).x;
        wavelength += (rand * 2.0f - 1.0f) * (0.5f / MAX_DISPERSE);

        bounceCount = 0.0f;

        for (float bounce = 0.0f; bounce < MAX_BOUNCE; bounce++) {

            if (bounce == 0.0f) {
                hit = firstHit;
            } else {
                hit = march(origin, rayDir, invert, maxDist / 2.0f, 1.0f, OUTER, INNER, animT, time, WOBBLE1, WOBBLE2, scale);
            }

            steps += hit.steps;

            res = hit.res;
            p = hit.p;

            if (invert < 0.0f) {
              extinctionDist += hit.len;
            }

            // hit background
            if ( res.y == 0.0f) {
                break;
            }

            float3 nor = normal(p, OUTER, INNER, animT, time, WOBBLE1, WOBBLE2, scale) * invert;
            ref = reflect(rayDir, nor);

            // shade
            sam += light(p, ref, envOrientation) * 0.5f;
            sam += _powcf(_fmaxf(1.0f - _fabs(dot(rayDir, nor)), 0.0f), 5.0f) * 0.1f;
            sam *= to_float3(0.85f,0.85f,0.98f);

            // refract
            float ior = _mix(1.2f, 1.8f, wavelength);
            ior = invert < 0.0f ? ior : 1.0f / ior;
            raf = _refract_f3(rayDir, nor, ior, refmul, refoff);
            if(Refract2)
              raf = __refract_f3(rayDir, nor, ior, refmul, refoff);
            bool tif = raf.x==0.0f && raf.y==0.0f &&raf.z==0.0f ;//raf == to_float3_s(0); // total internal reflection
            rayDir = tif ? ref : raf;
            offset = 0.01f / _fabs(dot(rayDir, nor));
            origin = p + offset * rayDir;
            if(Invert)
              invert = tif ? invert : invert * -1.0f;
            else
              invert *= -1.0f; // not correct but gives more interesting results

            bounceCount = bounce;
        }

        if (!DARK_MODE)
           sam += bounceCount == 0.0f ? bgCol : env(p, rayDir, envOrientation, BGCOL);

        if (bounceCount == 0.0f) {
            // didn't bounce, so don't bother calculating dispersion
            col += sam * MAX_DISPERSE / 2.0f;
            break;
        } else {
            float3 extinction = swi3(Extriction,x,y,z)*Extric;//to_float3(0.5f,0.5f,0.5f) * 0.0f;
            extinction = 1.0f / (1.0f + (extinction * extinctionDist));
            col += sam * extinction * spectrum(-wavelength+0.25f);
        }
    }

    // debug
    //fragColor = to_float4_aw(spectrum(steps / 2000.0f), 1); return;
    //fragColor = to_float4_aw(to_float3(bounceCount / MAX_BOUNCE), 1); return;
    //fragColor = to_float4_aw(to_float3(firstHit.steps / 100.0f), 1); return;

    col /= MAX_DISPERSE;

    fragColor = to_float4_aw(col, range(4.0f, 12.0f, firstLen));

  _tex2DVec4Write(destinationTexture, fusion_x, fusion_y, fragColor);
}
