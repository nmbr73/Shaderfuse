ShaderKernelCode =
[[
// ----------------------------------------------------------------------------------
// - Common                                                                         -
// ----------------------------------------------------------------------------------
#define texture(ch,uv) _tex2DVecN(ch, (uv).x, (uv).y, 15)
// ----------------------------------------------------------------------------------
// - Image                                                                          -
// ----------------------------------------------------------------------------------


// CC0: Saturday cubism experiment
//  Trying to recreate some twitch graphics but failed
//  but thought the failure looked interesting enough to share

#define TIME        iTime
#define RESOLUTION  iResolution
#define PI          3.141592654f
#define TAU         (2.0f*PI)
#define ROT(a)      to_mat2(_cosf(a), _sinf(a), -_sinf(a), _cosf(a))

#define TOLERANCE       0.0005f
#define MAX_RAY_LENGTH  20.0f
#define MAX_RAY_MARCHES 80
#define MAX_SHD_MARCHES 20
#define NORM_OFF        0.005f



// License: WTFPL, author: sam hocevar, found: https://stackoverflow.com/a/17897228/418488
__DEVICE__ float3 hsv2rgb(float3 c) {
  const float4 hsv2rgb_K = to_float4(1.0f, 2.0f / 3.0f, 1.0f / 3.0f, 3.0f);
  float3 p = abs_f3(fract_f3(swi3(c,x,x,x) + swi3(hsv2rgb_K,x,y,z)) * 6.0f - swi3(hsv2rgb_K,w,w,w));
  return c.z * _mix(swi3(hsv2rgb_K,x,x,x), clamp(p - swi3(hsv2rgb_K,x,x,x), 0.0f, 1.0f), c.y);
}
// License: WTFPL, author: sam hocevar, found: https://stackoverflow.com/a/17897228/418488
//  Macro version of above to enable compile-time constants
#define HSV2RGB(c)  (c.z * _mix(swi3(hsv2rgb_K,x,x,x), clamp(abs_f3(fract_f3(swi3(c,x,x,x) + swi3(hsv2rgb_K,x,y,z)) * 6.0f - swi3(hsv2rgb_K,w,w,w)) - swi3(hsv2rgb_K,x,x,x), 0.0f, 1.0f), c.y))



// License: Unknown, author: nmz (twitter: @stormoid), found: https://www.shadertoy.com/view/NdfyRM
__DEVICE__ float3 sRGB(float3 t) {
  return mix_f3(1.055f*pow_f3(t, to_float3_s(1.0f/2.4f)) - 0.055f, 12.92f*t, step(t, to_float3_s(0.0031308f)));
}

// License: Unknown, author: Matt Taylor (https://github.com/64), found: https://64.github.io/tonemapping/
__DEVICE__ float3 aces_approx(float3 v) {
  v = _fmaxf(v, to_float3_s(0.0f));
  v *= 0.6f;
  float a = 2.51f;
  float b = 0.03f;
  float c = 2.43f;
  float d = 0.59f;
  float e = 0.14f;
  return clamp((v*(a*v+b))/(v*(c*v+d)+e), 0.0f, 1.0f);
}

// License: Unknown, author: Unknown, found: don't remember
__DEVICE__ float tanh_approx(float x) {
  //  Found this somewhere on the interwebs
  //  return _tanhf(x);
  float x2 = x*x;
  return clamp(x*(27.0f + x2)/(27.0f+9.0f*x2), -1.0f, 1.0f);
}

// License: MIT, author: Inigo Quilez, found: https://iquilezles.org/articles/distfunctions/
__DEVICE__ float rayPlane(float3 ro, float3 rd, float4 p) {
  return -(dot(ro,swi3(p,x,y,z))+p.w)/dot(rd,swi3(p,x,y,z));
}

// License: MIT, author: Inigo Quilez, found: https://iquilezles.org/www/articles/distfunctions2d/distfunctions2d.htm
__DEVICE__ float box(float2 p, float2 b) {
  float2 d = abs_f2(p)-b;
  return length(_fmaxf(d,to_float2_s(0.0f))) + _fminf(_fmaxf(d.x,d.y),0.0f);
}

// License: MIT, author: Inigo Quilez, found: https://iquilezles.org/www/articles/distfunctions3d/distfunctions3d.htm
__DEVICE__ float box_f3(float3 p, float3 b) {
  float3 q = abs_f3(p) - b;
  return length(_fmaxf(q,to_float3_s(0.0f))) + _fminf(_fmaxf(q.x,_fmaxf(q.y,q.z)),0.0f);
}

__DEVICE__ float ref(inout float3 *p, float3 r) {
  float d = dot(*p, r);
  *p -= r*_fminf(0.0f, d)*2.0f;
  return d < 0.0f ? 0.0f : 1.0f;
}

__DEVICE__ float3 render0(float3 ro, float3 rd, float3 sunDir1, float3 skyCol, float3 skylineCol, float3 sunCol) {
  float3 col = to_float3_s(0.0f);
  float sf = 1.0001f-_fmaxf(dot(sunDir1, rd), 0.0f);
  col += skyCol*_powf((1.0f-_fabs(rd.y)), 8.0f);
  col += clamp(to_float3_s(_mix(0.0025f, 0.125f, tanh_approx(0.005f/sf))/_fabs(rd.y))*skylineCol, 0.0f, 10.0f);
  sf *= sf;
  col += sunCol*0.00005f/sf;

  float tp1  = rayPlane(ro, rd, to_float4_aw(to_float3(0.0f, -1.0f, 0.0f), 6.0f));

  if (tp1 > 0.0f) {
    float3 pos  = ro + tp1*rd;
    float2 pp = swi2(pos,x,z);
    float db = box(pp, to_float2(5.0f, 9.0f))-3.0f;

    col += to_float3_s(4.0f)*skyCol*rd.y*rd.y*smoothstep(0.25f, 0.0f, db);
    col += to_float3_s(0.8f)*skyCol*_expf(-0.5f*_fmaxf(db, 0.0f));
  }
  return clamp(col, 0.0f, 10.0f);
}

__DEVICE__ float df(float3 p, mat2 g_rot0) {
  swi2S(p,x,z, mul_f2_mat2(swi2(p,x,z) , g_rot0));
  float3 p0 = p;
  float3 p1 = p;
  float3 p2 = p;

  const float ss = 1.0f;
  p0.y -= -0.2f;
  p0.z = _fabs(p0.z);
  p0.x = -_fabs(p0.x);
  p0.x -= -0.4f*ss;
  ref(&p0, normalize(to_float3(1.0f, -0.05f, -1.0f)));
  p0.x -= 1.3f*ss;
  ref(&p0, normalize(to_float3(1.0f, 0.30f, 1.0f)));
  p0.x -= 1.4f*ss;
  p0.z -= 0.3f*ss;
  ref(&p0, normalize(to_float3(1.0f, -1.0f, 0.5f)));
  p0.x -= 1.25f*ss;
  p0.z -= -0.5f*ss;
  p0.y -= -0.3f*ss;
  float d0 = box_f3(p0, to_float3_s(0.5f))-0.0125f;

  p1.x -= 0.4f;
  p1.y -= 0.75f;
  float d1 = box_f3(p1, to_float3_s(1.25f))-0.0125f;

  p2.y += 2.0f;
  float d2 = p2.y;

  float d = d1;        // Grosse Box in der Mitte
  d = _fminf(d, d0);   // Boxen drum rum
  d = _fminf(d, d2); // Boden
  return d;
}

__DEVICE__ float3 normal(float3 pos, mat2 g_rot0) {
  float2  eps = to_float2(NORM_OFF,0.0f);
  float3 nor;
  nor.x = df(pos+swi3(eps,x,y,y), g_rot0) - df(pos-swi3(eps,x,y,y), g_rot0);
  nor.y = df(pos+swi3(eps,y,x,y), g_rot0) - df(pos-swi3(eps,y,x,y), g_rot0);
  nor.z = df(pos+swi3(eps,y,y,x), g_rot0) - df(pos-swi3(eps,y,y,x), g_rot0);
  return normalize(nor);
}

__DEVICE__ float rayMarch(float3 ro, float3 rd, float initt, mat2 g_rot0) {
  float t = initt;
  float tol = TOLERANCE;
  for (int i = 0; i < MAX_RAY_MARCHES; ++i) {
    if (t > MAX_RAY_LENGTH) {
      t = MAX_RAY_LENGTH;
      break;
    }
    float d = df(ro + rd*t, g_rot0);
    if (d < TOLERANCE) {
      break;
    }
    t += d;
  }
  return t;
}

__DEVICE__ float shadow(float3 lp, float3 ld, float mint, float maxt, mat2 g_rot0) {

  const float ds = 1.0f-0.4f;
  float t = mint;
  float nd = 1E6f;
  float h;
  const float soff = 0.05f;
  const float smul = 1.5f;
  for (int i=0; i < MAX_SHD_MARCHES; ++i) {
    float3 p = lp + ld*t;
    float d = df(p, g_rot0);
    if (d < TOLERANCE || t >= maxt) {
      float sd = 1.0f-_expf(-smul*_fmaxf(t/maxt-soff, 0.0f));
      return t >= maxt ? _mix(sd, 1.0f, smoothstep(0.0f, 0.025f, nd)) : sd;
    }
    nd = _fminf(nd, d);
    t += ds*d;
  }
  float sd = 1.0f-_expf(-smul*_fmaxf(t/maxt-soff, 0.0f));
  return sd;
}

__DEVICE__ float3 boxCol(float3 col, float3 nsp, float3 rd, float3 nnor, float3 nrcol, float nshd1, float nshd2, float3 skyCol, float3 skylineCol, float3 lightPos1, float3 lightPos2, float3 diffCol1, float3 diffCol2, float3 BoxCol) {
  float nfre  = 1.0f+dot(rd, nnor);
  nfre        *= nfre;

  float3 nld1   = normalize(lightPos1-nsp);
  float3 nld2   = normalize(lightPos2-nsp);

  float ndif1 = _fmaxf(dot(nld1, nnor), 0.0f);
  ndif1       *= ndif1;

  float ndif2 = _fmaxf(dot(nld2, nnor), 0.0f);
  ndif2       *= ndif2;

  float3 scol = to_float3_s(0.0f);
  float rf = smoothstep(1.0f, 0.9f, nfre);
  scol += diffCol1*ndif1*nshd1;
  scol += diffCol2*ndif2*nshd2;
  scol += 0.1f*(skyCol+skylineCol);
  scol += nrcol*0.75f*_mix(to_float3_s(0.25f), BoxCol, nfre); //to_float3(0.5f, 0.5f, 1.0f), nfre);

  col = _mix(col, scol, rf*smoothstep(90.0f, 20.0f, dot(nsp, nsp)));

  return col;
}

__DEVICE__ float3 render1(float3 ro, float3 rd, float3 skyCol, float3 skylineCol, float3 lightPos1, float3 lightPos2, float3 diffCol1, float3 diffCol2, float3 sunDir1, float3 sunCol, mat2 g_rot0, float3 BoxCol) {
  float3 _skyCol = render0(ro, rd, sunDir1, skyCol, skylineCol, sunCol);
  float3 col     = _skyCol;

  float nt    = rayMarch(ro, rd, 0.0f, g_rot0);
  if (nt < MAX_RAY_LENGTH) {
    float3 nsp    = ro + rd*nt;
    float3 nnor   = normal(nsp, g_rot0);

    float3 nref   = reflect(rd, nnor);
    float nrt     = rayMarch(nsp, nref, 0.2f, g_rot0);
    float3 nrcol  = render0(nsp, nref, sunDir1, skyCol, skylineCol, sunCol);

    if (nrt < MAX_RAY_LENGTH) {
      float3 nrsp   = nsp + nref*nrt;
      float3 nrnor  = normal(nrsp, g_rot0);
      float3 nrref  = reflect(nref, nrnor);
      nrcol = boxCol(nrcol, nrsp, nref, nrnor, render0(nrsp, nrref, sunDir1, skyCol, skylineCol, sunCol), 1.0f, 1.0f, skyCol, skylineCol, lightPos1, lightPos2, diffCol1, diffCol2, BoxCol);
    }

    float nshd1  = _mix(0.0f, 1.0f, shadow(nsp, normalize(lightPos1 - nsp), 0.1f, distance_f3(lightPos1, nsp), g_rot0));
    float nshd2  = _mix(0.0f, 1.0f, shadow(nsp, normalize(lightPos2 - nsp), 0.1f, distance_f3(lightPos2, nsp), g_rot0));

    col = boxCol(col, nsp, rd, nnor, nrcol, nshd1, nshd2, skyCol, skylineCol, lightPos1, lightPos2, diffCol1, diffCol2, BoxCol);
  }
  return col;
}

__DEVICE__ float3 effect(float2 p, float3 skyCol, float3 skylineCol, float3 lightPos1, float3 lightPos2, float3 diffCol1, float3 diffCol2, float3 sunDir1, float3 sunCol, mat2 g_rot0, float iTime, float Fov, float3 View, float4 iMouse, float2 iResolution, float Angle, float3 BoxCol) {
  g_rot0 = ROT(-0.2f*TIME + Angle);

  const float fov = _tanf(TAU/Fov);
  float3 ro = to_float3(0.0f, 2.5f, 5.0f) + View;
  const float3 la = to_float3(0.0f, 0.0f, 0.0f);
  const float3 up = to_float3(0.1f, 1.0f, 0.0f);

  float3 ww = normalize(la - ro);
  float3 uu = normalize(cross(up, ww));
  float3 vv = cross(ww,uu);
  float3 rd = normalize(-p.x*uu + p.y*vv + fov*ww);

  //############### 3D Mouse-Rotation des Objektes ##############
  float crz = (iMouse.x - iResolution.x / 2.0f) / iResolution.x * PI;
  float crx = (iMouse.y - iResolution.y / 2.0f) / iResolution.y * PI;

  mat3 m = mul_mat3_mat3(to_mat3(_cosf(crz), 0.0f, _sinf(crz), 0.0f, 1.0f, 0.0f, -_sinf(crz), 0.0f, _cosf(crz)) ,
                         to_mat3(1.0f, 0.0f, 0.0f, 0.0f, _cosf(crx), _sinf(crx), 0.0f, -_sinf(crx), _cosf(crx)));

  if(iMouse.z > 0.0f)
  {
      ro = mul_mat3_f3(m , ro);
      rd = mul_mat3_f3(m , rd);
  }
 //#############################################################

  float3 col = render1(ro, rd, skyCol, skylineCol, lightPos1, lightPos2, diffCol1, diffCol2, sunDir1, sunCol, g_rot0, BoxCol);

  return col;
}

__KERNEL__ void SaturdayCubismExperimentFuse(__CONSTANTREF__ Params*  params,  __TEXTURE2D__ iChannel0, __TEXTURE2D_WRITE__ destinationTexture)
{
   DEFINE_KERNEL_ITERATORS_XY(fusion_x, fusion_y);

   if (fusion_x >= params->width || fusion_y >= params->height)
     return;

  float2 iResolution = to_float2(params->iResolution[0], params->iResolution[1]);
  float  iTime       = params->iTime;
  float4 iMouse      = to_float4(params->iMouse[0],params->iMouse[1],params->iMouse[2],params->iMouse[3]);
  float4 fragColor   = to_float4_s(0.0f);
  float2 fragCoord   = to_float2(fusion_x,fusion_y);


  bool   Reset = params->Reset;
  float4 SkyCol = to_float4(params->SkyCol[0], params->SkyCol[1], params->SkyCol[2], params->SkyCol[3]);
