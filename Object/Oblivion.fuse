*/
#define ZERO 0 //_fminf(iFrame, 0)

//----------------------------------------------------------------------------------------
#ifdef ORG
// Action cue sheet, for easy manipulation...
#define cueINCLOUDS 0.0f
#define cueFLYIN 14.0f
#define cueFRONTOF cueFLYIN + 10.0f
#define cueTHREAT cueFRONTOF + 5.0f
#define cueFLYOFF cueTHREAT + 19.0f
